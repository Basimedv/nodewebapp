    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Get order ID from URL path
        const pathParts = window.location.pathname.split('/');
        const orderMongoId = pathParts[pathParts.length - 1];
        
        console.log('üîç URL Path:', window.location.pathname);
        console.log('üîç Path Parts:', pathParts);
        console.log('üîç Order ID:', orderMongoId);

        // Load order details on page load
        document.addEventListener('DOMContentLoaded', function() {
            console.log('üîç Checking orderMongoId:', orderMongoId);
            if (orderMongoId && orderMongoId !== 'order-detail') {
                console.log('‚úÖ Loading order details for:', orderMongoId);
                loadOrderDetails(orderMongoId);
            } else {
                console.log('‚ùå Showing empty state');
                showEmptyState();
            }
        });

        function loadOrderDetails(id) {
            document.getElementById('loading').style.display = 'block';
            document.getElementById('orderContent').style.display = 'none';

            fetch(`/admin/orders/${id}`)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        displayOrderDetails(data.order, data.shippingAddress);
                    } else {
                        showError(data.error || 'Failed to load order details');
                    }
                })
                .catch(error => {
                    console.error('Error loading order details:', error);
                    showError('Error loading order details');
                })
                .finally(() => {
                    document.getElementById('loading').style.display = 'none';
                    document.getElementById('orderContent').style.display = 'block';
                });
        }

        // Global icon mapping for order statuses
        const iconMap = {
            pending: 'fa-solid fa-clock',
            processing: 'fa-solid fa-cog',
            shipped: 'fa-solid fa-truck',
            delivered: 'fa-solid fa-check-circle',
            cancelled: 'fa-solid fa-times-circle',
            'out for delivery': 'fa-solid fa-truck',
            'return request': 'fa-solid fa-rotate-left',
            'return requested': 'fa-solid fa-rotate-left',
            returned: 'fa-solid fa-rotate-left'
        };

        // Global order variable
        let order = null;

       function displayOrderDetails(orderData, shippingAddress) {
    // Set global order variable WITH return request
    order = {
        ...orderData,
        returnRequest: orderData.returnRequest || null  // ‚úÖ Include return request
    };
    
    console.log('üîç Order data received:', order);
    console.log('üîç Order status:', order.status);
    console.log('üîç Return request data:', order.returnRequest);
    
    // Order Information
    document.getElementById('orderId').textContent = order.orderId || '-';
    document.getElementById('orderDate').textContent = formatDate(order.createdOn);
    document.getElementById('paymentMethod').textContent = order.paymentMethod === 'COD' ? 'Cash on Delivery' : order.paymentMethod;
    
    const statusBadge = document.getElementById('orderStatus');
    const statusIcon = iconMap[order.status.toLowerCase()] || 'fa-solid fa-question-circle';
    
    // ‚úÖ Add info icon if there's a return request
    let statusHTML = `<i class="${statusIcon}"></i> ${order.status}`;
    
    if (order.status === 'Return Request' && order.returnRequest) {
        statusHTML += ` <button onclick="handleReturnAction()" class="btn btn-info btn-sm" style="margin-left: 10px;" title="View Return Request">
            <i class="bi bi-info-circle"></i>
        </button>`;
    }
    
    statusBadge.innerHTML = statusHTML;
    statusBadge.className = `status-badge status-${order.status.toLowerCase().replace(' ', '-')}`;

    // Customer Information
    if (order.userId) {
        document.getElementById('customerName').textContent = order.userId.fullName || 'Unknown';
        document.getElementById('customerEmail').textContent = order.userId.email || 'No email';
        document.getElementById('customerPhone').textContent = order.userId.phone || 'No phone';
    } else {
        document.getElementById('customerName').textContent = 'N/A';
        document.getElementById('customerEmail').textContent = 'N/A';
        document.getElementById('customerPhone').textContent = 'N/A';
    }

    // Shipping Address
    displayShippingAddress(shippingAddress);

    // Order Items
    if (order.orderedItems && order.orderedItems.length > 0) {
        displayOrderItems(order.orderedItems);
    } else {
        document.getElementById('orderItems').innerHTML = '<p class="text-center text-muted">No order items found</p>';
    }

    // Amount Summary
    document.getElementById('subtotal').textContent = `‚Çπ${(order.totalPrice || 0).toLocaleString('en-IN')}`;
    document.getElementById('deliveryCharge').textContent = `‚Çπ${(order.deliveryCharge || 0).toLocaleString('en-IN')}`;
    document.getElementById('discount').textContent = `-‚Çπ${(order.dicount || 0).toLocaleString('en-IN')}`;
    document.getElementById('totalAmount').textContent = `‚Çπ${(order.finalAmount || 0).toLocaleString('en-IN')}`;

    // Show/hide action buttons
    updateActionButtons(order);
}
        // Function to update action buttons based on order status
        function updateActionButtons(order) {
            const refundBtn = document.getElementById('refundBtn');
            const createReturnBtn = document.getElementById('createReturnBtn');

            // Reset all buttons to hidden
            refundBtn.style.display = 'none';
            createReturnBtn.style.display = 'none';

            // Show refund button for cancelled orders with wallet/online payment
            if (order.status === 'Cancelled' && 
                (order.paymentMethod === 'Wallet' || order.paymentMethod === 'Online Payment')) {
                refundBtn.style.display = 'inline-block';
            }

            // Show create return request button for delivered orders (all payment methods)
            if (order.status === 'Delivered' && !order.returnRequest) {
                createReturnBtn.style.display = 'inline-block';
            }
        }

        // Function to display shipping address
        function displayShippingAddress(shippingAddress) {
            console.log('üîç Shipping address data received:', shippingAddress);
            
            const addressContainer = document.getElementById('shippingAddressDisplay');
            
            if (!addressContainer) {
                console.error('Address container not found');
                return;
            }
            
            if (shippingAddress) {
                // Build address HTML using the same logic as confirmOrder.ejs
                let addressHTML = `<strong>${shippingAddress.name} | ${shippingAddress.phone}</strong><p>`;
                
                // Add address lines
                if (shippingAddress.addressLine1) {
                    addressHTML += `${shippingAddress.addressLine1}`;
                }
                if (shippingAddress.addressLine2) {
                    addressHTML += `, ${shippingAddress.addressLine2}`;
                }
                
                // Add landmark if exists (handle both field names)
                if (shippingAddress.landMark || shippingAddress.landmark) {
                    addressHTML += `, ${shippingAddress.landMark || shippingAddress.landmark}`;
                }
                
                addressHTML += `<br>`;
                
                // Add city, state, pincode (handle both field names)
                addressHTML += `${shippingAddress.city}, ${shippingAddress.state}, India - ${shippingAddress.pinCode || shippingAddress.pincode}</p>`;
                
                // Add alt phone if exists
                if (shippingAddress.altPhone) {
                    addressHTML += `<p>Alt Phone: ${shippingAddress.altPhone}</p>`;
                }
                
                // Add address type if exists
                if (shippingAddress.addressType) {
                    addressHTML += `<p><small class="text-muted">${shippingAddress.addressType}</small></p>`;
                }
                
                console.log('üìã Address HTML generated:', addressHTML);
                addressContainer.innerHTML = addressHTML;
            } else {
                console.log('‚ùå No shipping address available');
                addressContainer.innerHTML = '<p class="text-muted">No shipping address available</p>';
            }
        }

        function displayOrderItems(items) {
            const itemsHtml = items.map((item, index) => {
                // Access product data from nested product object
                const product = item.product || {};
                const imageUrl = (product.productImage && product.productImage.length > 0) 
                    ? product.productImage[0] 
                    : '/images/colinguest.png';
                
                const totalPrice = (item.price || 0) * (item.quantity || 0);
                
                return `
                    <div class="product-item">
                        <img src="${imageUrl}" 
                             alt="${product.productName || 'Product'}" 
                             class="product-image"
                             loading="lazy"
                             onerror="this.src='/images/colinguest.png'">
                        <div class="product-details">
                            <div class="product-name">${product.productName || 'Unknown Product'}</div>
                            <div class="product-meta">
                                <span class="quantity-badge">Qty: ${item.quantity || 0}</span>
                                <span class="quantity-badge">Unit Price: ‚Çπ${(item.price || 0).toLocaleString('en-IN')}</span>
                                ${product.regularPrice ? `<span class="quantity-badge">Regular: ‚Çπ${product.regularPrice.toLocaleString('en-IN')}</span>` : ''}
                                ${product.salePrice ? `<span class="quantity-badge">Sale: ‚Çπ${product.salePrice.toLocaleString('en-IN')}</span>` : ''}
                                ${product.productOffer ? `<span class="quantity-badge">Offer: ${product.productOffer}%</span>` : ''}
                            </div>
                        </div>
                        <div class="product-price">‚Çπ${totalPrice.toLocaleString('en-IN')}</div>
                    </div>
                `;
            }).join('');
            
            document.getElementById('orderItems').innerHTML = itemsHtml || '<p class="text-center text-muted py-3">No order items found</p>';
        }

        function formatDate(dateString) {
            if (!dateString) return 'N/A';
            const date = new Date(dateString);
            return date.toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'short',
                day: '2-digit',
                hour: '2-digit',
                minute: '2-digit',
                hour12: true
            });
        }

        function changeOrderStatus() {
            const currentStatus = document.getElementById('orderStatus').textContent.trim();
            const statusOptions = ['Pending', 'Shipped', 'Cancelled'];
            
            // Create select options HTML
