    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Get order ID from URL path
        const pathParts = window.location.pathname.split('/');
        const orderMongoId = pathParts[pathParts.length - 1];

        // Load order details on page load
        document.addEventListener('DOMContentLoaded', function() {
            if (orderMongoId && orderMongoId !== 'order-detail') {
                loadOrderDetails(orderMongoId);
            } else {
                showEmptyState();
            }
        });

        function loadOrderDetails(id) {
            document.getElementById('loading').style.display = 'block';
            document.getElementById('orderContent').style.display = 'none';

            fetch(`/admin/api/orders/${orderMongoId}`)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        displayOrderDetails(data.order, data.shippingAddress);
                    } else {
                        showError(data.error || 'Failed to load order details');
                    }
                })
                .catch(error => {
                    console.error('Error loading order details:', error);
                    showError('Error loading order details');
                })
                .finally(() => {
                    document.getElementById('loading').style.display = 'none';
                    document.getElementById('orderContent').style.display = 'block';
                });
        }

        function displayOrderDetails(order, shippingAddress) {
            console.log('üîç Order data received:', order);
            console.log('üìÖ Order createdAt:', order.createdAt);
            console.log('üìÖ Order createdOn:', order.createdOn);
            
            // Order Information
            document.getElementById('orderId').textContent = order.orderId || '-';
            document.getElementById('orderDate').textContent = formatDate(order.createdAt);
            document.getElementById('paymentMethod').textContent = order.paymentMethod === 'COD' ? 'Cash on Delivery' : order.paymentMethod;
            
            const statusBadge = document.getElementById('orderStatus');
            statusBadge.textContent = order.status;
            statusBadge.className = `status-badge status-${order.status.toLowerCase().replace(' ', '-')}`;

            // Customer Information
            if (order.userId) {
                document.getElementById('customerName').textContent = order.userId.fullName || 'Unknown';
                document.getElementById('customerEmail').textContent = order.userId.email || 'No email';
                document.getElementById('customerPhone').textContent = order.userId.phone || 'No phone';
            } else {
                document.getElementById('customerName').textContent = 'N/A';
                document.getElementById('customerEmail').textContent = 'N/A';
                document.getElementById('customerPhone').textContent = 'N/A';
            }

            // Shipping Address
            displayShippingAddress(shippingAddress);

            // Order Items
            if (order.orderedItems && order.orderedItems.length > 0) {
                displayOrderItems(order.orderedItems);
            } else {
                document.getElementById('orderItems').innerHTML = '<p class="text-center text-muted">No order items found</p>';
            }

            // Amount Summary
            document.getElementById('subtotal').textContent = `‚Çπ${(order.subtotal || 0).toLocaleString('en-IN')}`;
            document.getElementById('deliveryCharge').textContent = `‚Çπ${(order.deliveryCharge || 0).toLocaleString('en-IN')}`;
            document.getElementById('discount').textContent = `-‚Çπ${(order.discount || 0).toLocaleString('en-IN')}`;
            document.getElementById('totalAmount').textContent = `‚Çπ${(order.finalAmount || 0).toLocaleString('en-IN')}`;

            // Show/hide action buttons based on order status and payment method
            updateActionButtons(order);
        }

        // Function to update action buttons based on order status
        function updateActionButtons(order) {
            const refundBtn = document.getElementById('refundBtn');
            const createReturnBtn = document.getElementById('createReturnBtn');

            // Reset all buttons to hidden
            refundBtn.style.display = 'none';
            createReturnBtn.style.display = 'none';

            // Show refund button for cancelled orders with wallet/online payment
            if (order.status === 'Cancelled' && 
                (order.paymentMethod === 'Wallet' || order.paymentMethod === 'Online Payment')) {
                refundBtn.style.display = 'inline-block';
            }

            // Show create return request button for delivered orders (all payment methods)
            if (order.status === 'Delivered' && !order.returnRequest) {
                createReturnBtn.style.display = 'inline-block';
            }
        }

        // Function to display shipping address
        function displayShippingAddress(shippingAddress) {
            console.log('üîç Shipping address data received:', shippingAddress);
            
            const addressContainer = document.getElementById('shippingAddressDisplay');
            
            if (!addressContainer) {
                console.error('Address container not found');
                return;
            }
            
            if (shippingAddress) {
                // Build address HTML using the same logic as confirmOrder.ejs
                let addressHTML = `<strong>${shippingAddress.name} | ${shippingAddress.phone}</strong><p>`;
                
                // Add address lines
                if (shippingAddress.addressLine1) {
                    addressHTML += `${shippingAddress.addressLine1}`;
                }
                if (shippingAddress.addressLine2) {
                    addressHTML += `, ${shippingAddress.addressLine2}`;
                }
                
                // Add landmark if exists (handle both field names)
                if (shippingAddress.landMark || shippingAddress.landmark) {
                    addressHTML += `, ${shippingAddress.landMark || shippingAddress.landmark}`;
                }
                
                addressHTML += `<br>`;
                
                // Add city, state, pincode (handle both field names)
                addressHTML += `${shippingAddress.city}, ${shippingAddress.state}, India - ${shippingAddress.pinCode || shippingAddress.pincode}</p>`;
                
                // Add alt phone if exists
                if (shippingAddress.altPhone) {
                    addressHTML += `<p>Alt Phone: ${shippingAddress.altPhone}</p>`;
                }
                
                // Add address type if exists
                if (shippingAddress.addressType) {
                    addressHTML += `<p><small class="text-muted">${shippingAddress.addressType}</small></p>`;
                }
                
                console.log('üìã Address HTML generated:', addressHTML);
                addressContainer.innerHTML = addressHTML;
            } else {
                console.log('‚ùå No shipping address available');
                addressContainer.innerHTML = '<p class="text-muted">No shipping address available</p>';
            }
        }

        function displayOrderItems(items) {
            const itemsHtml = items.map((item, index) => {
                // Use productImage from order data (stored in order schema)
                const imageUrl = (item.productImage && item.productImage.length > 0) 
                    ? item.productImage[0] 
                    : '/images/colinguest.png';
                
                const totalPrice = (item.price || 0) * (item.quantity || 0);
                
                return `
                    <div class="product-item">
                        <img src="${imageUrl}" 
                             alt="${item.productName || 'Product'}" 
                             class="product-image"
                             loading="lazy"
                             onerror="this.src='/images/colinguest.png'">
                        <div class="product-details">
                            <div class="product-name">${item.productName || 'Unknown Product'}</div>
                            <div class="product-meta">
                                <span class="quantity-badge">Qty: ${item.quantity || 0}</span>
                                <span class="quantity-badge">Size: ${item.size || 'N/A'}</span>
                                <span class="quantity-badge">Unit Price: ‚Çπ${(item.price || 0).toLocaleString('en-IN')}</span>
                            </div>
                        </div>
                        <div class="product-price">‚Çπ${totalPrice.toLocaleString('en-IN')}</div>
                    </div>
                `;
            }).join('');
            
            document.getElementById('orderItems').innerHTML = itemsHtml || '<p class="text-center text-muted py-3">No order items found</p>';
        }

        function formatDate(dateString) {
            if (!dateString) return 'N/A';
            const date = new Date(dateString);
            return date.toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'short',
                day: '2-digit',
                hour: '2-digit',
                minute: '2-digit',
                hour12: true
            });
        }

        function changeOrderStatus() {
            const currentStatus = document.getElementById('orderStatus').textContent.trim();
            const statusOptions = ['Placed', 'Processing', 'Shipped', 'Out for Delivery', 'Delivered', 'Cancelled', 'Payment Failed'];
            
            // Create select options HTML
            const selectOptions = statusOptions.map(status => 
                `<option value="${status}" ${status === currentStatus ? 'selected' : ''}>${status}</option>`
            ).join('');

            Swal.fire({
                title: 'Change Order Status',
                html: `
                    <select id="statusSelect" class="form-select">
                        ${selectOptions}
                    </select>
                `,
                showCancelButton: true,
                confirmButtonText: 'Update Status',
                cancelButtonText: 'Cancel',
                preConfirm: () => {
                    return document.getElementById('statusSelect').value;
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    const newStatus = result.value;
                    
                    if (newStatus === currentStatus) {
                        Swal.fire('Info', 'Status is already set to ' + newStatus, 'info');
                        return;
                    }

                    // Make API call to update status
                    fetch(`/admin/orders/${orderMongoId}/status`, {
                        method: 'PUT',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ status: newStatus })
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            Swal.fire({
                                title: 'Success!',
                                text: `Order status changed to ${newStatus}`,
                                icon: 'success',
                                timer: 1500,
                                showConfirmButton: false
                            }).then(() => {
                                location.reload();
                            });
                        } else {
                            Swal.fire({
                                title: 'Error',
                                text: data.error || 'Failed to change order status',
                                icon: 'error'
                            });
                        }
                    })
                    .catch(error => {
                        console.error('Error changing order status:', error);
                        Swal.fire({
                            title: 'Error',
                            text: 'Failed to change order status',
                            icon: 'error'
                        });
                    });
                }
            });
        }

        // Process Refund Function
        function processRefund() {
            Swal.fire({
                title: 'Process Refund',
                text: 'Are you sure you want to process the refund to the customer\'s wallet?',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#28a745',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, Process Refund',
                cancelButtonText: 'No'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire({
                        title: 'Processing Refund...',
                        text: 'Please wait while we process the refund.',
                        icon: 'info',
                        allowOutsideClick: false,
                        showConfirmButton: false,
                        didOpen: () => {
                            Swal.showLoading();
                        }
                    });

                    fetch(`/admin/orders/${orderMongoId}/refund`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({})
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            Swal.fire({
                                title: 'Refund Processed!',
                                text: data.message,
                                icon: 'success',
                                confirmButtonColor: '#28a745'
                            }).then(() => {
                                location.reload();
                            });
                        } else {
                            Swal.fire({
                                title: 'Refund Failed',
                                text: data.error || 'Failed to process refund',
                                icon: 'error'
                            });
                        }
                    })
                    .catch(error => {
                        console.error('Error processing refund:', error);
                        Swal.fire({
                            title: 'Error',
                            text: 'Failed to process refund',
                            icon: 'error'
                        });
                    });
                }
            });
        }

        // Process Return Function
        function processReturn() {
            Swal.fire({
                title: 'Process Return',
                text: 'Are you sure you want to process the return and credit the customer\'s wallet?',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#ffc107',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, Process Return',
                cancelButtonText: 'No'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire({
                        title: 'Processing Return...',
                        text: 'Please wait while we process the return.',
                        icon: 'info',
                        allowOutsideClick: false,
                        showConfirmButton: false,
                        didOpen: () => {
                            Swal.showLoading();
                        }
                    });

                    fetch(`/admin/orders/${orderMongoId}/return`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({})
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            Swal.fire({
                                title: 'Return Processed!',
                                text: data.message,
                                icon: 'success',
                                confirmButtonColor: '#ffc107'
                            }).then(() => {
                                location.reload();
                            });
                        } else {
                            Swal.fire({
                                title: 'Return Failed',
                                text: data.error || 'Failed to process return',
                                icon: 'error'
                            });
                        }
                    })
                    .catch(error => {
                        console.error('Error processing return:', error);
                        Swal.fire({
                            title: 'Error',
                            text: 'Failed to process return',
                            icon: 'error'
                        });
                    });
                }
            });
        }

        // Download Invoice Function
        function downloadInvoice() {
            Swal.fire({
                title: 'Generating Invoice...',
                text: 'Please wait while we generate the invoice.',
                icon: 'info',
                allowOutsideClick: false,
                showConfirmButton: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });

            fetch(`/admin/orders/${orderMongoId}/invoice`, {
                method: 'GET',
                headers: {
                    'Content-Type': 'application/json',
                }
            })
            .then(response => {
                if (response.ok) {
                    return response.blob();
                } else {
                    throw new Error('Failed to generate invoice');
                }
            })
            .then(blob => {
                const url = window.URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;
                a.download = `invoice_${orderMongoId}.pdf`;
                document.body.appendChild(a);
                a.click();
                window.URL.revokeObjectURL(url);
                document.body.removeChild(a);

                Swal.fire({
                    title: 'Invoice Downloaded!',
                    text: 'Invoice has been downloaded successfully.',
                    icon: 'success',
                    confirmButtonColor: '#007bff'
                });
            })
            .catch(error => {
                console.error('Error downloading invoice:', error);
                Swal.fire({
                    title: 'Error',
                    text: 'Failed to generate invoice',
                    icon: 'error'
                });
            });
        }

        function showEmptyState() {
            document.getElementById('loading').style.display = 'none';
            document.getElementById('orderContent').innerHTML = `
                <div class="empty-state">
                    <i class="bi bi-box"></i>
                    <h3>Order Not Found</h3>
                    <p>The requested order could not be found.</p>
                    <a href="/admin/orders" class="btn btn-primary">Back to Orders</a>
                </div>
            `;
            document.getElementById('orderContent').style.display = 'block';
        }

        function showError(message) {
            document.getElementById('loading').style.display = 'none';
            document.getElementById('orderContent').innerHTML = `
                <div class="empty-state">
                    <i class="bi bi-exclamation-triangle"></i>
                    <h3>Error</h3>
                    <p>${message}</p>
                    <a href="/admin/orders" class="btn btn-primary">Back to Orders</a>
                </div>
            `;
            document.getElementById('orderContent').style.display = 'block';
        }
    </script>
