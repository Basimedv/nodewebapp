        // Set initial server data
        function setInitialData() {
            document.getElementById('totalCustomers').textContent = serverData.totalUsers.toLocaleString();
            document.getElementById('totalSales').textContent = 'â‚¹' + serverData.totalRevenue.toLocaleString();
