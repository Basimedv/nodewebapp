            document.getElementById('productsSold').textContent = serverData.totalOrders.toLocaleString();
        }

        // Update charts with server data
        function updateChartsFromServerData() {
            // Update sales chart
            if (salesChart && serverData.paymentStats) {
                // Create chart data from payment stats
                const labels = ['Paid', 'Pending', 'Failed', 'Completed'];
                const salesData = serverData.paymentStats.map(stat => stat.totalAmount || 0);
                const ordersData = serverData.paymentStats.map(stat => stat.count || 0);
                
                salesChart.data.labels = labels;
                salesChart.data.datasets[0].data = salesData;
                salesChart.data.datasets[0].label = 'Sales Amount (â‚¹)';
                salesChart.update();
            }
            
            // Update orders chart with sample data
            if (ordersChart) {
                const orderLabels = ['Week 1', 'Week 2', 'Week 3', 'Week 4'];
                const ordersData = [120, 145, 160, 178, 195, 210, 225];
                
                ordersChart.data.labels = orderLabels;
                ordersChart.data.datasets[0].data = ordersData;
                ordersChart.update();
            }
            
            // Update products chart
            if (productsChart && serverData.bestSellingProducts) {
                const labels = serverData.bestSellingProducts.map(product => product.productName ? product.productName.substring(0, 15) + '...' : 'Unknown');
                const data = serverData.bestSellingProducts.map(product => product.unitsSold || 0);
                
                productsChart.data.labels = labels;
                productsChart.data.datasets[0].data = data;
                productsChart.update();
            }
            
            // Update categories chart
            if (categoriesChart && serverData.bestCategories) {
                console.log('ðŸ·ï¸ Categories data:', serverData.bestCategories);
                
                const labels = serverData.bestCategories.map(category => {
                    console.log('ðŸ·ï¸ Processing category:', category);
                    
                    // Try multiple possible field names for category name
                    const categoryName = category.categoryName || 
                                       category.name || 
                                       category.category_name || 
                                       'Unknown Category';
                    
                    const displayName = categoryName ? categoryName.substring(0, 15) + '...' : 'Unknown';
                    console.log('ðŸ·ï¸ Category name:', categoryName, 'Display name:', displayName);
                    
                    return displayName;
                });
                const data = serverData.bestCategories.map(category => category.totalUnitsSold || 0);
                
                console.log('ðŸ·ï¸ Final category labels:', labels);
                console.log('ðŸ·ï¸ Final category data:', data);
                
                categoriesChart.data.labels = labels;
                categoriesChart.data.datasets[0].data = data;
                categoriesChart.update();
            }
            
            // Update location chart
            if (brandsChart && serverData.salesByLocation) {
                const labels = serverData.salesByLocation.map(location => location.locationName ? location.locationName.substring(0, 15) + '...' : 'Unknown');
                const data = serverData.salesByLocation.map(location => location.totalRevenue || 0);
                
                brandsChart.data.labels = labels;
                brandsChart.data.datasets[0].data = data;
                brandsChart.update();
            }
        }

