<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Products - COLINGUEST</title>
  <link href="https://fonts.googleapis.com/css2?family=Bellefair&family=Outfit:wght@400;500;700&display=swap"
    rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
  <style>
    body {
      font-family: 'Outfit', sans-serif;
      background: #f5f7fa;
      min-height: 100vh;
    }

    .navbar {
      background: white;
      padding: 15px 30px;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      z-index: 1000;
      box-shadow: 0 2px 10px rgba(0, 0, 0, .08)
    }

    .brand-name {
      font-family: 'Bellefair';
      font-size: 28px;
      color: #192430;
      text-decoration: none;
    }

    .sidebar {
      width: 250px;
      background: #f9f9f9;
      padding: 20px 0;
      position: fixed;
      top: 60px;
      bottom: 0;
      left: 0;
      overflow-y: auto
    }

    .sidebar a {
      display: flex;
      align-items: center;
      padding: 15px 30px;
      color: #192430;
      text-decoration: none;
      border-radius: 15px
    }

    .sidebar a.active {
      background: #3b6da1;
      color: white
    }

    .sidebar a i {
      margin-right: 12px;
    }

    .main-content {
      margin-left: 250px;
      padding: 80px 30px 30px;
    }

    .card {
      border: none;
      box-shadow: 0 2px 10px rgba(0, 0, 0, .06);
    }

    .btn-primary {
      background: #0202a1;
      border-color: #1900ba;
    }

    .btn-primary:hover {
      background: #0b5ed7;
      border-color: #0b5ed7;
    }

    .product-row:hover {
      background: #fafbff;
    }

    .thumb {
      width: 44px;
      height: 44px;
      object-fit: cover;
      border-radius: 6px;
      border: 1px solid #e5e7eb;
    }

    /* Stock badge styles */
    .stock-badge {
      padding: 4px 10px;
      border-radius: 6px;
      font-size: 0.85rem;
      font-weight: 600;
      display: inline-flex;
      align-items: center;
      gap: 4px;
    }

    .stock-badge.in-stock {
      background: #d1fae5;
      color: #065f46;
    }

    .stock-badge.low-stock {
      background: #fed7aa;
      color: #92400e;
    }

    .stock-badge.out-of-stock {
      background: #fee2e2;
      color: #991b1b;
    }

    /* Size tags */
    .size-display {
      display: flex;
      flex-wrap: wrap;
      gap: 4px;
    }

    .size-tag {
      background: #e0e7ff;
      color: #3730a3;
      padding: 2px 8px;
      border-radius: 4px;
      font-size: 0.75rem;
      font-weight: 600;
    }

    /* Price column */
    .price-column {
      font-weight: 600;
      color: #1f2937;
    }

    .price-original {
      text-decoration: line-through;
      color: #9ca3af;
      font-size: 0.85rem;
      margin-right: 8px;
    }

    .price-sale {
      color: #dc2626;
      font-weight: 700;
    }

    /* Status badge */
    .status-badge {
      padding: 4px 12px;
      border-radius: 6px;
      font-size: 0.85rem;
      font-weight: 600;
    }

    .status-badge.available {
      background: #d1fae5;
      color: #065f46;
    }

    .status-badge.out-of-stock {
      background: #fed7aa;
      color: #92400e;
    }

    .status-badge.discontinued {
      background: #e5e7eb;
      color: #374151;
    }

    .status-badge.blocked {
      background: #fee2e2;
      color: #991b1b;
    }

    /* Responsive table */
    @media (max-width: 1200px) {
      .main-content {
        margin-left: 0;
        padding: 80px 15px 30px;
      }

      .sidebar {
        transform: translateX(-100%);
      }
    }

    /* Total products badge */
    .total-badge {
      background: #e0e7ff;
      color: #3730a3;
      padding: 6px 16px;
      border-radius: 8px;
      font-weight: 600;
    }
  </style>
</head>

<body>
  <nav class="navbar">
    <a class="brand-name" href="/admin/products">COLINGUEST</a>
  </nav>

  <div class="sidebar d-none d-lg-block">
    <a href="/admin/dashboard"><i class="bi bi-grid"></i> Dashboard</a>
    <a href="/admin/categories"><i class="bi bi-tag"></i> Categories</a>
    <a href="/admin/products" class="active"><i class="bi bi-box"></i> Products</a>
    <a href="/admin/customers"><i class="bi bi-people"></i> Customers</a>
    <a href="/admin/orders"><i class="bi bi-cart"></i> Orders</a>
    <a href="/admin/coupons"><i class="bi bi-ticket"></i> Coupons</a>
    <a href="/admin/sales-report"><i class="bi bi-bar-chart"></i> Sales Report</a>
    <a href="/admin/wallet-management"><i class="bi bi-credit-card"></i> Wallet</a>
    <a href="/admin/logout"><i class="bi bi-box-arrow-right"></i> Sign Out</a>
  </div>

  <div class="main-content">
    <div class="d-flex align-items-center justify-content-between mb-3">
      <div>
        <h2 class="mb-1" style="color:#1a1b1c;">Product Management</h2>
        <p class="text-muted mb-0">
          <span class="total-badge">Total: <%= totalProducts || 0 %> products</span>
        </p>
      </div>
      <div class="d-flex gap-2">
        <a href="/admin/products/add" class="btn btn-primary">
          <i class="bi bi-plus-lg"></i> Add Product
        </a>
      </div>
    </div>

    <div class="card mb-3">
      <div class="card-body">
        <div class="input-group">
          <span class="input-group-text bg-light"><i class="bi bi-search"></i></span>
          <input id="searchInput" type="text" class="form-control" placeholder="Search products by name or description"
            value="<%= search || '' %>" />
          <button id="searchBtn" class="btn btn-outline-secondary">Search</button>
        </div>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <h6 class="text-muted mb-3">Product List</h6>
        <div class="table-responsive">
          <table class="table align-middle">
            <thead>
              <tr>
                <th>Product</th>
                <th>Category</th>
                <th>Regular Price</th>
                <th>Sale Price</th>
                <th>Stock</th>
                <th>Size</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% (products || []).forEach(p => { 
                // Calculate total stock
                let totalStock = 0;
                if (p.stock && typeof p.stock === 'object') {
                  totalStock = Object.values(p.stock).reduce((sum, qty) => sum + (parseInt(qty) || 0), 0);
                }
                
                // Determine stock status
                let stockClass = totalStock === 0 ? 'out-of-stock' : totalStock <= 5 ? 'low-stock' : 'in-stock';
                let stockIcon = totalStock === 0 ? 'bi-exclamation-triangle' : totalStock <= 5 ? 'bi-exclamation-circle' : 'bi-check-circle';
              %>
                <tr class="product-row">
                  <td>
                    <div class="d-flex align-items-center gap-2">
                      <img class="thumb"
                        src="<%= (p.productImage && p.productImage[0]) ? p.productImage[0] : 'https://via.placeholder.com/44' %>"
                        alt="thumb" />
                      <div>
                        <div class="fw-semibold"><%= p.productName || '-' %></div>
                        <small class="text-muted">ID: <%= p._id.toString().substring(0, 8) %>...</small>
                      </div>
                    </div>
                  </td>

                  <!-- Category -->
                  <td>
                    <span class="badge bg-light text-dark">
                      <%= (p.category && p.category.name) ? p.category.name : '-' %>
                    </span>
                  </td>

                  <!-- Regular Price -->
                  <td class="price-column">
                    ₹ <%= (typeof p.regularPrice === 'number') 
                          ? p.regularPrice.toFixed(2) 
                          : (parseFloat(p.regularPrice) ? parseFloat(p.regularPrice).toFixed(2) : '0.00') %>
                  </td>

                  <!-- Sale Price -->
                  <td>
                    <% 
                      const regularPrice = parseFloat(p.regularPrice) || 0;
                      const salePrice = parseFloat(p.salePrice) || 0;
                      const hasDiscount = salePrice < regularPrice && salePrice > 0;
                    %>
                    <% if (hasDiscount) { %>
                      <span class="price-sale">₹ <%= salePrice.toFixed(2) %></span>
                      <div class="price-original">₹ <%= regularPrice.toFixed(2) %></div>
                    <% } else { %>
                      <span class="price-column">₹ <%= salePrice.toFixed(2) %></span>
                    <% } %>
                  </td>

                  <!-- Stock -->
                  <td>
                    <span class="stock-badge <%= stockClass %>">
                      <i class="bi <%= stockIcon %>"></i>
                      Total: <%= totalStock %>
                    </span>
                  </td>

                  <!-- Size -->
                  <td>
                    <div class="size-display">
                      <% if (Array.isArray(p.size) && p.size.length > 0) { %>
                        <% p.size.forEach(size => { %>
                          <span class="size-tag"><%= size %></span>
                        <% }) %>
                      <% } else { %>
                        <span class="text-muted">-</span>
                      <% } %>
                    </div>
                  </td>

                  <!-- Status -->
                  <td>
                    <% 
                      let statusClass = 'available';
                      let statusText = p.status || 'Available';
                      
                      if (p.isBlocked) {
                        statusClass = 'blocked';
                        statusText = 'Blocked';
                      } else if (p.status === 'Out of Stock') {
                        statusClass = 'out-of-stock';
                      } else if (p.status === 'Discontinued') {
                        statusClass = 'discontinued';
                      }
                    %>
                    <span class="status-badge <%= statusClass %>">
                      <%= statusText %>
                    </span>
                  </td>

                  <!-- Actions -->
                  <td>
                    <div class="d-flex align-items-center gap-2">
                      <a href="#" class="toggle-block" data-id="<%= p._id %>" data-blocked="<%= !!p.isBlocked %>"
                        title="Block/Unblock">
                        <i class="bi <%= p.isBlocked ? 'bi-toggle-on text-danger fs-4' : 'bi-toggle-off text-success fs-4' %>"></i>
                      </a>
                      <a href="/admin/products/edit/<%= p._id %>" class="btn btn-sm btn-primary" title="Edit">
                        <i class="bi bi-pencil"></i>
                      </a>
                    </div>
                  </td>
                </tr>
              <% }) %>

              <% if (!products || products.length === 0) { %>
                <tr>
                  <td colspan="8" class="text-center text-muted py-4">
                    <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                    No products found
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>

        <!-- Pagination -->
        <% if (totalPages > 1) { %>
          <nav class="mt-4">
            <ul class="pagination justify-content-center">
              <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                <a class="page-link" href="?page=<%= currentPage - 1 %>&search=<%= search || '' %>">&laquo;</a>
              </li>
              <% for (let p = 1; p <= totalPages; p++) { %>
                <li class="page-item <%= currentPage === p ? 'active' : '' %>">
                  <a class="page-link" href="?page=<%= p %>&search=<%= search || '' %>"><%= p %></a>
                </li>
              <% } %>
              <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                <a class="page-link" href="?page=<%= currentPage + 1 %>&search=<%= search || '' %>">&raquo;</a>
              </li>
            </ul>
          </nav>
        <% } %>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <script>
    // Search Functionality
    document.getElementById('searchBtn').addEventListener('click', function () {
      const searchTerm = document.getElementById('searchInput').value.trim();
      if (searchTerm) {
        window.location.href = `/admin/products?search=${encodeURIComponent(searchTerm)}`;
      } else {
        window.location.href = '/admin/products';
      }
    });

    document.getElementById('searchInput').addEventListener('keypress', function (e) {
      if (e.key === 'Enter') {
        document.getElementById('searchBtn').click();
      }
    });

    // Toggle Block/Unblock
    document.querySelectorAll('.toggle-block').forEach(link => {
      link.addEventListener('click', async (e) => {
        e.preventDefault();
        const id = link.getAttribute('data-id');
        const isBlocked = link.getAttribute('data-blocked') === 'true';

        const result = await Swal.fire({
          title: isBlocked ? 'Unblock Product?' : 'Block Product?',
          text: isBlocked ? 'This product will be available again' : 'This product will be hidden from customers',
          icon: 'question',
          showCancelButton: true,
          confirmButtonColor: '#0d6efd',
          cancelButtonColor: '#6c757d',
          confirmButtonText: isBlocked ? 'Yes, Unblock' : 'Yes, Block'
        });

        if (result.isConfirmed) {
          try {
            const response = await fetch(`/admin/products/${id}/block`, {
              method: 'PUT',
              headers: { 'Content-Type': 'application/json' }
            });

            const data = await response.json();

            if (data.success) {
              Swal.fire({
                icon: 'success',
                title: 'Success!',
                text: data.message,
                timer: 1500,
                showConfirmButton: false
              }).then(() => {
                window.location.reload();
              });
            } else {
              throw new Error(data.message);
            }
          } catch (error) {
            Swal.fire({
              icon: 'error',
              title: 'Error!',
              text: error.message || 'Failed to update product status'
            });
          }
        }
      });
    });
  </script>

</body>

</html>