      imgElement.src = url;
      editCropperModal.show();

      editScaleX = 1;
      editScaleY = 1;

      setTimeout(() => {
        if (editCropper) editCropper.destroy();
        editCropper = new Cropper(imgElement, {
          aspectRatio: 1,
          viewMode: 1,
          autoCropArea: 0.8,
          responsive: true,
          preview: '#editPreview',
          ready: function () {
            const containerData = editCropper.getContainerData();
            const cropBoxWidth = Math.min(containerData.width, containerData.height) * 0.8;
            editCropper.setCropBoxData({
              left: (containerData.width - cropBoxWidth) / 2,
