<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Manage Offers</title>
  <link href="https://fonts.googleapis.com/css2?family=Bellefair&family=Outfit:wght@400;500;700&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <style>
    body { font-family: 'Outfit', sans-serif; background:#f5f7fa; min-height:100vh; }
    .navbar{ background:white; padding:15px 30px; position:fixed; top:0; left:0; right:0; z-index:1000; box-shadow:0 2px 10px rgba(0,0,0,.08) }
    .brand-name{ font-family:'Bellefair'; font-size:28px; color:#192430; text-decoration:none; }
    .sidebar{ width:250px; background:#f9f9f9; padding:20px 0; position:fixed; top:60px; bottom:0; left:0; overflow-y:auto }
    .sidebar a{ display:flex; align-items:center; padding:15px 30px; color:#192430; text-decoration:none; border-radius:15px }
    .sidebar a.active{ background:#3b6da1; color:white }
    .main-content{ margin-left:250px; padding:80px 30px 30px; }
    .offer-card{ background:white; padding:20px; border-radius:8px; box-shadow:0 2px 10px rgba(0,0,0,.05); margin-bottom:20px; }
    .offer-card th{ background:#3b6da1; color:white; }
    .nav-tabs .nav-link{ color:#192430; }
    .nav-tabs .nav-link.active{ background:#3b6da1; color:white; border-color:#3b6da1; }
    .badge-offer{ background:#28a745; color:white; padding:4px 8px; border-radius:4px; font-size:0.85rem; }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar">
    <a class="brand-name" href="/admin/offers">COLINGUEST</a>
  </nav>

  <!-- Sidebar -->
  <div class="sidebar d-none d-lg-block">
    <a href="/admin/dashboard"><i class="bi bi-grid"></i> Dashboard</a>
    <a href="/admin/categories"><i class="bi bi-tag"></i> Categories</a>
    <a href="/admin/brands"><i class="bi bi-badge-tm"></i> Brands</a>
    <a href="/admin/offers" class="active"><i class="bi bi-gift"></i> Offers</a>
    <a href="/admin/products"><i class="bi bi-box"></i> Products</a>
    <a href="/admin/addproducts"><i class="bi bi-box"></i> Add Products</a>
    <a href="/admin/customers"><i class="bi bi-people"></i> Customers</a>
    <a href="/admin/orders"><i class="bi bi-cart"></i> Orders</a>
    <a href="/admin/coupons"><i class="bi bi-ticket"></i> Coupons</a>
    <a href="/admin/sales-report"><i class="bi bi-bar-chart"></i> Sales Report</a>
    <a href="/admin/wallet-management"><i class="bi bi-credit-card"></i>Wallet</a>
    <a href="/admin/logout"><i class="bi bi-box-arrow-right"></i> Sign Out</a>
  </div>

  <!-- Main -->
  <div class="main-content">
    <h2 class="mb-4">Manage Offers</h2>

    <!-- Tabs -->
    <ul class="nav nav-tabs mb-3" role="tablist">
      <li class="nav-item">
        <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#category-offers">
          <i class="bi bi-tag me-2"></i>Category Offers
        </button>
      </li>
      <li class="nav-item">
        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#product-offers">
          <i class="bi bi-box me-2"></i>Product Offers
        </button>
      </li>
    </ul>

    <!-- Tab Content -->
    <div class="tab-content">
      
      <!-- Category Offers Tab -->
      <div class="tab-pane fade show active" id="category-offers">
        <div class="offer-card">
          <h5 class="mb-3">Category Offers</h5>
          <table class="table table-hover align-middle">
            <thead>
              <tr>
                <th>Category</th>
                <th>Description</th>
                <th>Offer Discount</th>
                <th>Status</th>
                <th class="text-center">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (!categories || categories.length === 0) { %>
                <tr>
                  <td colspan="5" class="text-center">No categories found.</td>
                </tr>
              <% } else { %>
                <% categories.forEach(category => { %>
                  <tr data-id="<%= category._id %>" data-type="category">
                    <td><%= category.name %></td>
                    <td><%= category.description || '-' %></td>
                    <td class="offer-value">
                      <%= category.categoryOffer ? category.categoryOffer + '%' : 'No Offer' %>
                    </td>
                    <td><%= category.isListed ? 'Active' : 'Inactive' %></td>
                    <td class="text-center">
                      <button class="btn btn-sm <%= category.categoryOffer ? 'btn-warning' : 'btn-success' %> set-offer"
                        data-id="<%= category._id %>"
                        data-type="category"
                        data-value="<%= category.categoryOffer || 0 %>">
                        <%= category.categoryOffer ? 'Edit Offer' : 'Add Offer' %>
                      </button>
                      <% if (category.categoryOffer) { %>
                        <button class="btn btn-sm btn-danger remove-offer ms-2"
                          data-id="<%= category._id %>"
                          data-type="category">
                          Remove
                        </button>
                      <% } %>
                    </td>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Product Offers Tab -->
      <div class="tab-pane fade" id="product-offers">
        <div class="offer-card">
          <h5 class="mb-3">Product Offers</h5>
          <table class="table table-hover align-middle">
            <thead>
              <tr>
                <th>Product</th>
                <th>Category</th>
                <th>Base Price</th>
                <th>Product Offer</th>
                <th>Category Offer</th>
                <th>Offer Discount</th>
                <th>Status</th>
                <th class="text-center">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (!products || products.length === 0) { %>
                <tr>
                  <td colspan="7" class="text-center">No products found.</td>
                </tr>
              <% } else { %>
                <% products.forEach(product => { %>
                  <tr data-id="<%= product._id %>" data-type="product">
                    <td><%= product.productName %></td>
                    <td><%= product.category?.name || '-' %></td>
                    <td>â‚¹<%= product.regularPrice %></td>
                    <td>
                      <% if (product.productOffer && product.productOffer > 0) { %>
                        <span class="badge bg-success"><%= product.productOffer %>%</span>
                      <% } else { %>
                        <span class="text-muted">No Offer</span>
                      <% } %>
                    </td>
                    <td>
                      <% if (product.category && product.category.categoryOffer && product.category.categoryOffer > 0) { %>
                        <span class="badge bg-info"><%= product.category.categoryOffer %>%</span>
                      <% } else { %>
                        <span class="text-muted">No Offer</span>
                      <% } %>
                    </td>
                                        <td class="offer-value">
                      <% // Display the greater offer
                      let appliedOffer = 0;
                      let appliedOfferType = '';
                      
                      if (product.productOffer > product.category.categoryOffer) {
                          appliedOffer = product.productOffer;
                          appliedOfferType = 'product';
                      } else if (product.category.categoryOffer > product.productOffer) {
                          appliedOffer = product.category.categoryOffer;
                          appliedOfferType = 'category';
                      }
                      %>
                      <%= appliedOffer > 0 ? appliedOffer + '%' : 'No Offer' %>
                    </td>
                    <td><%= product.status %></td>
                    <td class="text-center">
                      <button class="btn btn-sm <%= product.productOffer ? 'btn-warning' : 'btn-success' %> set-offer"
                        data-id="<%= product._id %>"
                        data-type="product"
                        data-value="<%= product.productOffer || 0 %>">
                        <%= product.productOffer ? 'Edit Offer' : 'Add Offer' %>
                      </button>
                      <% if (product.productOffer) { %>
                        <button class="btn btn-sm btn-danger remove-offer ms-2"
                          data-id="<%= product._id %>"
                          data-type="product">
                          Remove
                        </button>
                      <% } %>
                    </td>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>

    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    // Set/Edit Offer
    document.addEventListener('click', async e => {
      const btn = e.target.closest('.set-offer');
      if (!btn) return;

      const id = btn.dataset.id;
      const type = btn.dataset.type;
      const currentValue = Number(btn.dataset.value || 0);

      const { value: percentage } = await Swal.fire({
        title: `${currentValue > 0 ? 'Edit' : 'Add'} ${type === 'category' ? 'Category' : 'Product'} Offer`,
        input: 'number',
        inputLabel: 'Discount Percentage (%)',
        inputValue: currentValue,
        inputAttributes: { min: 0, max: 100, step: 1 },
        showCancelButton: true,
        inputValidator: (value) => {
          if (!value || value < 0 || value > 100) {
            return 'Please enter a valid percentage (0-100)';
          }
        }
      });

      if (percentage !== undefined) {
        await updateOffer(id, type, Number(percentage));
      }
    });

    // Remove Offer
    document.addEventListener('click', async e => {
      const btn = e.target.closest('.remove-offer');
      if (!btn) return;

      const id = btn.dataset.id;
      const type = btn.dataset.type;

      const confirm = await Swal.fire({
        title: 'Remove offer?',
        text: 'This will remove the discount from this item',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonText: 'Yes, remove',
        confirmButtonColor: '#dc3545'
      });

      if (confirm.isConfirmed) {
        await updateOffer(id, type, 0);
      }
    });

    async function updateOffer(id, type, percentage) {
      try {
        const endpoint = type === 'category' 
          ? `/admin/offers/category/${id}` 
          : `/admin/offers/product/${id}`;

        const res = await fetch(endpoint, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ offerPercentage: percentage })
        });

        const data = await res.json();
        if (!res.ok) throw new Error(data.error || 'Failed');

        // Update UI
        const row = document.querySelector(`tr[data-id="${id}"][data-type="${type}"]`);
        if (row) {
          const valueCell = row.querySelector('.offer-value');
          const setBtn = row.querySelector('.set-offer');
          const removeBtn = row.querySelector('.remove-offer');

          if (percentage > 0) {
            valueCell.textContent = percentage + '%';
            setBtn.textContent = 'Edit Offer';
            setBtn.classList.remove('btn-success');
            setBtn.classList.add('btn-warning');
            setBtn.dataset.value = percentage;
            
            if (!removeBtn) {
              const newRemoveBtn = document.createElement('button');
              newRemoveBtn.className = 'btn btn-sm btn-danger remove-offer ms-2';
              newRemoveBtn.dataset.id = id;
              newRemoveBtn.dataset.type = type;
              newRemoveBtn.textContent = 'Remove';
              setBtn.parentElement.appendChild(newRemoveBtn);
            }
          } else {
            valueCell.textContent = 'No Offer';
            setBtn.textContent = 'Add Offer';
            setBtn.classList.remove('btn-warning');
            setBtn.classList.add('btn-success');
            setBtn.dataset.value = 0;
            
            if (removeBtn) {
              removeBtn.remove();
            }
          }
        }

        Swal.fire({
          icon: 'success',
          title: 'Success',
          text: data.message || 'Offer updated successfully',
          timer: 2000,
          showConfirmButton: false
        });
      } catch (err) {
        console.error(err);
        Swal.fire({
          icon: 'error',
          title: 'Error',
          text: err.message || 'Could not update offer'
        });
      }
    }
  </script>
</body>
</html>