<aside class="sidebar">
    <div class="sidebar-header">
        <!-- Profile image with exact design from picture -->
        <div class="profile-section">
            <% if (user && user.profileImage) { %>
                <img src="<%= user.profileImage %>" alt="Profile" class="profile-avatar">
            <% } else { %>
                <div class="profile-avatar-placeholder">
                    <i class="fas fa-user"></i>
                </div>
            <% } %>
        </div>
        <div class="user-info">
            <h4 class="user-name"><%= user ? user.fullName : 'User' %></h4>
            <p class="user-email"><%= user ? user.email : 'user@example.com' %></p>
        </div>
    </div>
    
    <nav class="sidebar-menu">
        <a href="/user/orders" class="menu-item <%= (activePage === 'orders' || activePage === 'orderDetails') ? 'active' : '' %>">
            <i class="fas fa-shopping-bag"></i>
            <span>My Orders</span>
        </a>
        <a href="/user/profile" class="menu-item <%= activePage === 'profile' ? 'active' : '' %>">
            <i class="fas fa-user"></i>
            <span>Profile</span>
        </a>
        <a href="/user/address" class="menu-item <%= activePage === 'address' ? 'active' : '' %>">
            <i class="fas fa-map-marker-alt"></i>
            <span>Addresses</span>
        </a>
        <a href="/user/privacy" class="menu-item <%= activePage === 'privacy' ? 'active' : '' %>">
            <i class="fas fa-key"></i>
            <span>Privacy</span>
        </a>
        <a href="/user/coupons" class="menu-item <%= activePage === 'coupons' ? 'active' : '' %>">
            <i class="fas fa-ticket-alt"></i>
            <span>Coupons</span>
        </a>
        <a href="/wallet" class="menu-item <%= activePage === 'wallet' ? 'active' : '' %>">
            <i class="fas fa-wallet"></i>
            <span>Wallet</span>
        </a>
       
        <a href="/user/logout" class="menu-item logout">
            <i class="fas fa-sign-out-alt"></i>
            <span>Logout</span>
        </a>
    </nav>
</aside>

