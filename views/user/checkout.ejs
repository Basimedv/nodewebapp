        // Apply coupon code function
        async function applyCouponCode() {
            const couponInput = document.getElementById('couponCode');
            const couponCode = couponInput.value.trim();
            
            if (!couponCode) {
                showMessage('Please enter a coupon code', 'warning');
                return;
            }
            
            const applyBtn = document.getElementById('applyCoupon');
            const originalText = applyBtn.innerHTML;
            let responseData = null;
            
            // Show loading state
            applyBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Applying...';
            applyBtn.disabled = true;
            
            try {
                const response = await fetch('/checkout/apply-coupon?t=' + Date.now(), {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ couponCode: couponCode })
                });
                
                responseData = await response.json();
                
                if (responseData.success) {
                    // Update order summary with new totals
                    updateOrderSummary(responseData.cart);
                    
                    // Show success message with safe number handling
                    const discountAmount = responseData.discount || 0;
                    showMessage(`Coupon "${couponCode}" applied successfully! You saved ₹${discountAmount.toFixed(2)}`, 'success');
                    
                    // Clear input
                    couponInput.value = '';
                    
                    // Update apply button to show remove option
                    applyBtn.innerHTML = '<i class="fas fa-times"></i> Remove';
                    applyBtn.classList.remove('btn-outline-secondary');
                    applyBtn.classList.add('btn-outline-danger');
                    applyBtn.onclick = removeCoupon;
                    
                } else {
                    showMessage(responseData.message || 'Invalid coupon code', 'error');
                }
                
            } catch (error) {
                console.error('🎟️ Error applying coupon:', error);
                showMessage('Failed to apply coupon. Please try again.', 'error');
            } finally {
                if (!responseData || !responseData.success) {
                    applyBtn.innerHTML = originalText;
                    applyBtn.disabled = false;
                }
            }
        }

        // Remove coupon function
        async function removeCoupon() {
            const applyBtn = document.getElementById('applyCoupon');
            const originalText = applyBtn.innerHTML;
            let responseData = null;
            
            // Show loading state
            applyBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Removing...';
            applyBtn.disabled = true;
            
            try {
                const response = await fetch('/checkout/remove-coupon', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });
                
                responseData = await response.json();
                
                if (responseData.success) {
                    // Update order summary with new totals
