                        setTimeout(() => window.location.reload(), 1000);
                    }
                } else {
                    couponMessage.className = 'small text-danger';
                    couponMessage.innerHTML = `<i class="fas fa-exclamation-circle"></i> ${data.message}`;
                }
            } catch (error) {
                console.error('Error applying coupon:', error);
                
                couponMessage.className = 'small text-danger';
                couponMessage.textContent = 'An error occurred. Please try again.';
            } finally {
                this.disabled = false;
                this.textContent = 'Apply';
            }
        });
        
        // ==================== SETUP PHONE INPUTS ====================
        function setupPhoneInputs() {
            console.log('Setting up phone input restrictions');
            
            const phoneInputs = document.querySelectorAll('input[type="tel"]');
            phoneInputs.forEach(input => {
                input.addEventListener('input', function() {
                    this.value = this.value.replace(/\D/g, '').substring(0, 10);
                });
            });
            
            const pinInputs = document.querySelectorAll('input[name="pinCode"]');
            pinInputs.forEach(input => {
                input.addEventListener('input', function() {
                    this.value = this.value.replace(/\D/g, '').substring(0, 6);
                });
            });
            
            console.log('Phone input handlers setup complete');
        }
        
