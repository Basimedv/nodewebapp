                    showMessage(responseData.message || 'Failed to remove coupon', 'error');
                }
                
            } catch (error) {
                showMessage('Failed to remove coupon. Please try again.', 'error');
            } finally {
                if (!responseData || !responseData.success) {
                    applyBtn.innerHTML = originalText;
                    applyBtn.disabled = false;
                }
            }
        }

        // Update order summary with new totals
        function updateOrderSummary(cart) {
            // Validate cart data
            if (!cart || typeof cart !== 'object') {
                console.error('❌ Invalid cart data received:', cart);
                return;
            }
            
            // Update subtotal
            const subtotalElement = document.querySelector('[data-field="subtotal-amount"]');
            if (subtotalElement && cart.subtotal != null) {
                const newSubtotal = parseFloat(cart.subtotal).toFixed(2);
                subtotalElement.textContent = `₹${newSubtotal}`;
            }
            
            // Update or remove discount display
            const discountContainer = document.querySelector('[data-field="discount-container"]');
            if (cart.discount > 0) {
                if (!discountContainer) {
                    // Create discount element if it doesn't exist
                    const totalElement = document.querySelector('[data-field="total-amount"]');
                    if (totalElement && totalElement.parentElement) {
                        const discountHtml = `
                            <div class="d-flex justify-content-between mb-2" data-field="discount-container">
                                <div class="text-success small">
                                    <i class="fas fa-ticket-alt me-1"></i>
                                    Coupon Discount
                                    ${cart.appliedCoupon && cart.appliedCoupon.code ? `<small class="text-muted ms-1">(${cart.appliedCoupon.code})</small>` : ''}
                                </div>
                                <div class="text-success small" data-field="discount-amount">-₹${parseFloat(cart.discount).toFixed(2)}</div>
                            </div>
                        `;
                        totalElement.parentElement.insertAdjacentHTML('beforebegin', discountHtml);
                    }
                } else {
                    // Update existing discount
                    const discountText = discountContainer.querySelector('.text-success');
                    if (discountText) {
                        discountText.innerHTML = `
                            <i class="fas fa-ticket-alt me-1"></i>
                            Coupon Discount
                            ${cart.appliedCoupon && cart.appliedCoupon.code ? `<small class="text-muted ms-1">(${cart.appliedCoupon.code})</small>` : ''}
                        `;
                    }
                    const discountAmount = discountContainer.querySelector('[data-field="discount-amount"]');
                    if (discountAmount) {
                        discountAmount.textContent = `-₹${parseFloat(cart.discount).toFixed(2)}`;
                    }
                }
            } else if (discountContainer) {
                discountContainer.remove();
            }
            
            // Update delivery fee
            const deliveryElement = document.querySelector('[data-field="delivery-fee"]');
            if (deliveryElement && cart.deliveryFee != null) {
                const newDeliveryFee = parseFloat(cart.deliveryFee).toFixed(2);
                deliveryElement.textContent = `₹${newDeliveryFee}`;
            }
            
            // Update total
            const totalElement = document.querySelector('[data-field="total-amount"]');
            if (totalElement && cart.total != null) {
                const newTotal = parseFloat(cart.total).toFixed(2);
                totalElement.textContent = `₹${newTotal}`;
            }
            
            // Update proceed to payment button
            const proceedBtn = document.getElementById('placeOrderBtn');
            if (proceedBtn && cart.total != null) {
                const btnText = proceedBtn.querySelector('.btn-text');
                if (btnText) {
                    btnText.textContent = `Proceed to Payment - ₹${parseFloat(cart.total).toFixed(2)}`;
                }
            }
        }

