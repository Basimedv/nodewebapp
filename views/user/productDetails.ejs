                          <div class="mb-2 fw-semibold">Select Size:</div>
                          <div class="size-grid d-flex flex-wrap gap-2 mb-3">
                            <% sizes.forEach((s, idx)=> { %>
                              <button type="button" class="btn <%= idx===0 ? 'active' : '' %>" data-size="<%= s %>">
                                <%= s %>
                              </button>
                              <% }) %>
                          </div>

                          <!-- Quantity Selector -->
                          <% if (!isOutOfStock) { %>
                            <div class="mb-3">
                              <div class="d-flex align-items-center">
                                <span class="me-2 fw-semibold">Quantity:</span>
                                <div class="input-group" style="width: 150px;">
                                  <button class="btn btn-outline-secondary px-3" type="button" id="decrement-qty">-</button>
                                  <input type="number" class="form-control text-center" id="product-quantity" 
                                         value="1" min="1" 
                                         max="<%= product && product.stock ? product.stock : 10 %>" 
                                         readonly>
                                  <button class="btn btn-outline-secondary px-3" type="button" id="increment-qty">+</button>
                                </div>
                                <% if (product && product.stock) { %>
                                  <small class="ms-2 text-muted">Max: <%= product.stock %></small>
                                <% } %>
                              </div>
                            </div>
                          <% } %>

                          <!-- Action Buttons -->
                          <div class="d-flex gap-2 mb-2">
                            <% if (isOutOfStock) { %>
                              <button class="btn btn-secondary w-100" disabled>
                                <i class="fas fa-times-circle me-1"></i> Out of Stock
                              </button>
                            <% } else { %>
                              <button class="btn btn-dark" data-product-id="<%= product?._id %>"
                                data-price="<%= finalPrice %>" id="buy-now-btn">
                                Buy Now
