<body>
   <%- include("../partials/user/header") %>
  <main>
    <div class="container py-4 pd-wrapper">
      <%- include('../partials/user/breadcrumb', {
        breadcrumbs: [
          { name: 'Products', url: '/productListing' },
          { name: product?.category?.name || 'Category', url: `/productListing?category=${product?.category?._id || ''}` },
          { name: product?.productName || 'Product' }
        ]
      }) %>
      
      <div id="user-data" style="display: none;"
        data-user="<%= typeof user !== 'undefined' && user && user._id ? user._id : '' %>"
        data-images="<%= JSON.stringify(product?.productImage || []) %>"
        data-stock="<%= JSON.stringify(product?.stock || {}) %>"
        data-product-id="<%= product?._id || '' %>"
        data-category-id="<%= product && product.category ? product.category._id : '' %>"></div>

      <div class="product-details-container">
        <!-- Left: Product Images -->
        <div class="left-image-container">
          <div class="main-image-container">
            <button class="nav-arrow nav-arrow-left" id="prevImage">
              <i class="fas fa-chevron-left"></i>
            </button>

       <div class="main-image-container" id="mainImageContainer">
    <img id="mainImage" 
         src="<%= (product && Array.isArray(product.productImage) && product.productImage[0]) ? product.productImage[0] : '/images/placeholder.png' %>"
         alt="<%= product ? (product.productName || 'Product') : 'Product' %>">
</div>

            <button class="nav-arrow nav-arrow-right" id="nextImage">
              <i class="fas fa-chevron-right"></i>
            </button>
          </div>
        </div>

        <!-- Right: Product Info -->
        <div class="col-lg-6">
          <div class="pd-card">
            <div class="product-header">
              <h2 class="mb-3 fw-bold">
                <%= product ? (product.productName || 'Product') : 'Product' %>
              </h2>
              <div class="category-tag"><%= product.category.name %></div>
              
              <% 
                const baseRegular = Number(product?.regularPrice || 0);
                const salePrice = Number(product?.salePrice || 0);
                const productOffer = Number(product?.productOffer || 0);
                const categoryOffer = product?.category && product.category.offer ? Number(product.category.offer) : 0;
                const displayOffer = Math.max(productOffer, categoryOffer);
                
                let finalPrice = baseRegular;
                if (displayOffer > 0) {
                  finalPrice = Math.round(baseRegular - (baseRegular * displayOffer / 100));
                } else if (salePrice > 0 && salePrice < baseRegular) {
                  finalPrice = salePrice;
                }
              %>

              <div class="mb-3">
                <% if (finalPrice < baseRegular && finalPrice > 0) { %>
                  <div class="d-flex justify-content-between align-items-end">
                    <div>
                      <div class="small">Regular price</div>
                      <div>Rs. <del><%= baseRegular.toLocaleString('en-IN') %></del></div>
                    </div>
                    <div>
                      <div class="small fw-semibold">Sale price</div>
                      <div class="fw-bold fs-4">
                        Rs. <%= finalPrice.toLocaleString('en-IN') %>
                        <% if (displayOffer > 0) { %>
                          <span class="badge bg-success ms-1"><%= displayOffer %>% OFF</span>
                        <% } %>
                      </div>
                    </div>
                  </div>
                <% } else { %>
                  <div>
                    <div class="small text-muted">Price</div>
                    <div class="fw-bold fs-4">Rs. <%= baseRegular > 0 ? baseRegular.toLocaleString('en-IN') : '0' %></div>
                  </div>
                <% } %>
              </div>
              
  <div class="thumbnails" style="display: flex; gap: 10px; justify-content: left; margin-top: 15px; margin-bottom: 30px;">
        <% if (product && product.productImage) { %>
            <% product.productImage.forEach((img, index) => { %>
                <img src="<%= img %>" 
                     class="thumbnail <%= index === 0 ? 'active' : '' %>"
                     data-index="<%= index %>"
                     style="width: 50px; height: 50px; object-fit: cover; cursor: pointer; border-radius: 8px; border: 2px solid ">
            <% }) %>
        <% } %>
    </div>
</div>

              <!-- Size Selection -->
              <% 
                const allSizes = ['S', 'M', 'L', 'XL', 'XXL'];
                const productStock = product?.stock || {};
                const availableSizes = product?.size || [];
                
                let totalStock = 0;
                allSizes.forEach(size => {
                  totalStock += (productStock[size] || 0);
                });
                
                const isProductOutOfStock = totalStock === 0;
              %>
              
              <% if (!isProductOutOfStock) { %>
              <div class="mb-3">
                <div class="bt-1"></div>
                <form id="addToCartForm">
