                <div class="d-flex justify-content-between align-items-start">
                  <h2 class="mb-3 fw-bold product-title" style="font-size: 2rem; line-height: 1.2;">
                    <%= product ? (product.name || 'Product' ) : 'Product' %>
                  </h2>
                  <% const isOutOfStock = product && product.status === 'out of stock'; %>
                  <span class="badge <%= isOutOfStock ? 'bg-danger' : 'bg-success' %>">
                    <%= isOutOfStock ? 'Out of Stock' : 'In Stock' %>
                    <% if (!isOutOfStock && product && product.stock) { %>
                      (<%= product.stock %> available)
                    <% } %>
                  </span>
                </div>
                <div class="product-meta">
                  <div class="d-flex align-items-center gap-2 mb-2">
                    <div class="rating-stars">
                      <i class="fa fa-star"></i><i class="fa fa-star"></i>
                      <i class="fa fa-star"></i><i class="fa fa-star-half-alt"></i><i class="far fa-star"></i>
                    </div>
                    <small class="text-muted">(50 Reviews)</small>
                  </div>
