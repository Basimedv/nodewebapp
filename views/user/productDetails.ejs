    /* LEFT SIDE - Image Section */
    .left-image-container {
      flex: 0 0 auto;
      display: flex;
      flex-direction: column;
      gap: 20px;
    }
.main-image-container {
  position: relative;
  width: 600px;
  height: 600px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: crosshair;
  overflow: hidden;
}

#mainImage {
  max-width: 100%;
  max-height: 100%;
  display: block;
  object-fit: contain;
  transition: transform 0.05s ease;
}
.zoomImg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  z-index: 2;
  cursor: crosshair;
  object-fit: contain;
  transition: opacity 0.1s ease;
  pointer-events: none;
  max-width: none;
  max-height: none;
}

   
    /* Navigation Arrows */
   /* Hide arrows by default */
.nav-arrow {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background: rgba(255, 255, 255, 0.9);
  border: none;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
  z-index: 10;
  opacity: 0; /* Hidden by default */
  pointer-events: none; /* Can't click when hidden */
}

/* Show arrows on hover */
.main-image-container:hover .nav-arrow {
  opacity: 1;
  pointer-events: auto; /* Can click when visible */
}

.nav-arrow:hover {
  background: white;
  transform: translateY(-50%) scale(1.1);
}

.nav-arrow-left {
  left: 20px;
}

.nav-arrow-right {
  right: 20px;
}
    /* RIGHT SIDE - Product Details Section */
    .col-lg-6 {
      flex: 1;
      max-width: 600px;
    }

    .pd-card {
      background: transparent;
      border-radius: 15px;
      padding: 0;
      border: none;
      box-shadow: none;
    }

    .product-header h2 {
      font-size: 2rem;
      font-weight: 700;
      margin-bottom: 1rem;
      color: #2d3748;
    }

    /* Size Selection Styles */
    .attr-detail.attr-size {
      margin-bottom: 1.5rem;
    }

    .list-filter {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
      list-style: none;
      padding: 0;
      margin: 10px 0;
    }

    .list-filter li {
      display: inline-block;
    }

    .list-filter li a {
      display: block;
      padding: 10px 20px;
      border: 2px solid #68696a;
      border-radius: 8px;
      text-decoration: none;
      color: #495057;
      background: transparent;
      transition: all 0.3s ease;
      font-weight: 600;
      min-width: 50px;
      text-align: center;
    }

    .list-filter li a:hover {
     
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
    }

    .list-filter li.active a {
      background: rgb(14, 85, 239);
      color: white;
    
    }

    .list-filter li.disabled a {
      pointer-events: none;
      opacity: 0.5;
      text-decoration: line-through;
      background: #e9ecef;
      cursor: not-allowed;
    }

    /* Availability Text */
    #availabilityText {
      font-weight: 600;
    }

    #availabilityText.text-success {
      color: #28a745 !important;
    }

    #availabilityText.text-danger {
      color: #dc3545 !important;
    }

    #availabilityText.text-warning {
      color: #ffc107 !important;
    }

    /* Add to Cart Button */
