<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= product ? product.productName : "Product" %> | COLINGUEST</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/header.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <style>
    body {
      background: url("/images/background.jpg") no-repeat center center fixed;
      background-size: cover;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      min-height: 100vh;
    }

    main {
      min-height: calc(100vh - 80px);
      padding-bottom: 2rem;
    }

    .pd-wrapper {
      max-width: 1200px;
      margin: 0 auto;
    }

    /* Product Details Container */
    .product-details-container {
      display: flex;
      align-items: flex-start;
      justify-content: center;
      gap: 50px;
      padding: 40px 20px;
      max-width: 1200px;
      margin: 40px auto;
    }

    /* LEFT SIDE - Image Section */
    .left-image-container {
      flex: 0 0 auto;
    }

    .main-image-container {
      position: relative;
      width: 400px;
      height: 500px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .main-image {
      width: 100%;
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      background: transparent;
      border-radius: 15px;
      padding: 20px;
    }

    .main-image img,
    #mainImage {
      max-width: 100%;
      max-height: 100%;
      width: auto;
      height: auto;
      object-fit: contain;
      border-radius: 10px;
    }

    /* Navigation Arrows */
    .nav-arrow {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      background: rgba(255, 255, 255, 0.9);
      border: none;
      width: 40px;
      height: 40px;
      border-radius: 50%;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
      transition: all 0.3s ease;
      z-index: 10;
    }

    .nav-arrow:hover {
      background: white;
      transform: translateY(-50%) scale(1.1);
    }

    .nav-arrow-left {
      left: -20px;
    }

    .nav-arrow-right {
      right: -20px;
    }

    /* RIGHT SIDE - Product Details Section */
    .col-lg-6 {
      flex: 1;
      max-width: 600px;
    }

    .pd-card {
      background: transparent;
      border-radius: 15px;
      padding: 0;
      border: none;
      box-shadow: none;
    }

    .product-header h2 {
      font-size: 2rem;
      font-weight: 700;
      margin-bottom: 1rem;
      color: #2d3748;
    }

    /* Size Selection Styles */
    .attr-detail.attr-size {
      margin-bottom: 1.5rem;
    }

    .list-filter {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
      list-style: none;
      padding: 0;
      margin: 10px 0;
    }

    .list-filter li {
      display: inline-block;
    }

    .list-filter li a {
      display: block;
      padding: 10px 20px;
      border: 2px solid #dee2e6;
      border-radius: 8px;
      text-decoration: none;
      color: #495057;
      background: white;
      transition: all 0.3s ease;
      font-weight: 600;
      min-width: 50px;
      text-align: center;
    }

    .list-filter li a:hover {
      border-color: #667eea;
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
    }

    .list-filter li.active a {
      background: #667eea;
      color: white;
      border-color: #667eea;
    }

    .list-filter li.disabled a {
      pointer-events: none;
      opacity: 0.5;
      text-decoration: line-through;
      background: #e9ecef;
      cursor: not-allowed;
    }

    /* Availability Text */
    #availabilityText {
      font-weight: 600;
    }

    #availabilityText.text-success {
      color: #28a745 !important;
    }

    #availabilityText.text-danger {
      color: #dc3545 !important;
    }

    #availabilityText.text-warning {
      color: #ffc107 !important;
    }

    /* Add to Cart Button */
    .button-add-to-cart,
    .button.button-add-to-cart {
      width: 100%;
      padding: 15px;
      background: #667eea;
      color: white;
      border: none;
      border-radius: 8px;
      font-size: 1.1rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .button-add-to-cart:hover:not(:disabled) {
      background: #5568d3;
      transform: translateY(-2px);
      box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
    }

    .button-add-to-cart:disabled {
      background: #e9ecef;
      color: #6c757d;
      cursor: not-allowed;
      opacity: 0.6;
    }

    /* Border Lines */
    .bt-1 {
      border-top: 1px solid #e9ecef;
      margin: 20px 0;
    }

    /* Related Products Section */
    .related-section {
      margin-top: 60px;
      padding: 40px 20px;
      max-width: 1200px;
      margin-left: auto;
      margin-right: auto;
    }

   .section-title {
  font-size: 1.2rem;
  font-weight: 500;
  margin-bottom: 30px;
  color: black;
   text-align: left;
  margin-left: -70px; /* Remove container padding effect */
}

   .product-card {
  background:transparent;
  border-radius: 12px;
  padding: 15px;
  height: 100%;
  display: flex;
  flex-direction: column;

  border: 2px solid #dcdcdc;
  box-shadow: 6px 6px 15px rgba(0,0,0,0.25);
}


    .product-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
    }

    .product-card-image {
      width: 100%;
      height: 200px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 15px;
      background: transparent;
      border-radius: 8px;
      overflow: hidden;
    }

    .product-card-image img {
      max-width: 100%;
      max-height: 100%;
      object-fit: contain;
    }

    .product-card-title {
      font-size: 1rem;
      font-weight: 600;
      margin-bottom: 10px;
      color: #2d3748;
      min-height: 40px;
    }

    .product-card-price {
      font-size: 1.2rem;
      font-weight: 700;
      color: #667eea;
      margin-bottom: 15px;
    }

    .btn-add-to-cart-small {
      width: 100%;
      padding: 10px;
      background: #667eea;
      color: white;
      border: none;
      border-radius: 6px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      margin-top: auto;
    }

    .btn-add-to-cart-small:hover {
      background: #5568d3;
      transform: translateY(-2px);
    }

    .product-link {
      text-decoration: none;
      color: inherit;
      display: block;
      height: 100%;
    }

    /* Responsive Design */
    @media (max-width: 992px) {
      .product-details-container {
        flex-direction: column;
        align-items: center;
      }

      .main-image-container {
        width: 100%;
        max-width: 400px;
      }

      .col-lg-6 {
        width: 100%;
        max-width: 600px;
      }
    }

    @media (max-width: 768px) {
      .main-image-container {
        width: 100%;
        height: 400px;
      }

      .product-header h2 {
        font-size: 1.5rem;
      }

      .nav-arrow {
        width: 35px;
        height: 35px;
      }
    }

    .description {
  background: transparent;
  border: none;
  color: #2d3748; /* change if your text is dark */
  font-size: 1rem;
  padding: 10px 0;
  cursor: pointer;
  display: flex;
  align-items: center;
  gap: 8px;
}

  </style>
</head>

<body>
  <header>
    <div class="mainhead">
      <img src="/images/colinguest.png" class="imageLogo" alt="Logo">
      <div class="buttons">
        <input type="text" class="searchBar" placeholder="Search product...">
        <a href="/wishlist" class="header-icon" aria-label="Wishlist" title="Wishlist">
          <i class="fas fa-heart"></i>
        </a>
        <a href="/cart" class="header-icon" aria-label="Cart" title="Cart">
          <i class="fas fa-cart-shopping"></i>
        </a>
        <% if (user) { %>
        <div class="user-menu">
          <button id="userMenuToggle" class="user-toggle">
            <span><%= user.fullName %></span>
          </button>
          <div id="userDropdown" class="user-dropdown" aria-hidden="true">
            <a href="/profile"><i class="fas fa-user"></i> <span>Profile</span></a>
            <a href="/orders"><i class="fas fa-bag-shopping"></i> <span>My Orders</span></a>
            <a href="/wallet"><i class="fas fa-wallet"></i> <span>My Wallet</span></a>
            <hr>
            <a href="/logout" class="logout"><i class="fas fa-right-from-bracket"></i> <span>Logout</span></a>
          </div>
        </div>
        <% } else { %>
          <a href="/login" class="icon-btn">Sign In</a>
        <% } %>
      </div>
    </div>
    <div class="subhead">
      <nav>
        <ul>
          <a href="/landingPage"><li>Home</li></a>
          <a href="/productListing"><li>Shop</li></a>
          <a href="/customListing"><li>Custom</li></a>
          <a href="/about"><li>About</li></a>
          <a href="/contact"><li>Contact</li></a>
        </ul>
      </nav>
    </div>
  </header>

  <main>
    <div class="container py-4 pd-wrapper">
      <%- include('../partials/user/breadcrumb', {
        breadcrumbs: [
          { name: 'Products', url: '/productListing' },
          { name: product?.category?.name || 'Category', url: `/productListing?category=${product?.category?._id || ''}` },
          { name: product?.productName || 'Product' }
        ]
      }) %>
      
      <div id="user-data" style="display: none;"
        data-user="<%= typeof user !== 'undefined' && user && user._id ? user._id : '' %>"
        data-images="<%= JSON.stringify(product?.productImage || []) %>"
        data-stock="<%= JSON.stringify(product?.stock || {}) %>"
        data-product-id="<%= product?._id || '' %>"
        data-category-id="<%= product && product.category ? product.category._id : '' %>"></div>

      <div class="product-details-container">
        <!-- Left: Product Images -->
        <div class="left-image-container">
          <div class="main-image-container">
            <button class="nav-arrow nav-arrow-left" id="prevImage">
              <i class="fas fa-chevron-left"></i>
            </button>

            <div class="main-image">
              <img id="mainImage"
                src="<%= (product && Array.isArray(product.productImage) && product.productImage[0]) ? product.productImage[0] : '/images/placeholder.png' %>"
                alt="<%= product ? (product.productName || 'Product') : 'Product' %>">
            </div>

            <button class="nav-arrow nav-arrow-right" id="nextImage">
              <i class="fas fa-chevron-right"></i>
            </button>
          </div>
        </div>

        <!-- Right: Product Info -->
        <div class="col-lg-6">
          <div class="pd-card">
            <div class="product-header">
              <h2 class="mb-3 fw-bold">
                <%= product ? (product.productName || 'Product') : 'Product' %>
              </h2>
              
              <% 
                const baseRegular = Number(product?.regularPrice || 0);
                const salePrice = Number(product?.salePrice || 0);
                const productOffer = Number(product?.productOffer || 0);
                const categoryOffer = product?.category && product.category.offer ? Number(product.category.offer) : 0;
                const displayOffer = Math.max(productOffer, categoryOffer);
                
                let finalPrice = baseRegular;
                if (displayOffer > 0) {
                  finalPrice = Math.round(baseRegular - (baseRegular * displayOffer / 100));
                } else if (salePrice > 0 && salePrice < baseRegular) {
                  finalPrice = salePrice;
                }
              %>

              <div class="mb-3">
                <% if (finalPrice < baseRegular && finalPrice > 0) { %>
                  <div class="d-flex justify-content-between align-items-end">
                    <div>
                      <div class="small">Regular price</div>
                      <div>Rs. <del><%= baseRegular.toLocaleString('en-IN') %></del></div>
                    </div>
                    <div>
                      <div class="small fw-semibold">Sale price</div>
                      <div class="fw-bold fs-4">
                        Rs. <%= finalPrice.toLocaleString('en-IN') %>
                        <% if (displayOffer > 0) { %>
                          <span class="badge bg-success ms-1"><%= displayOffer %>% OFF</span>
                        <% } %>
                      </div>
                    </div>
                  </div>
                <% } else { %>
                  <div>
                    <div class="small text-muted">Price</div>
                    <div class="fw-bold fs-4">Rs. <%= baseRegular > 0 ? baseRegular.toLocaleString('en-IN') : '0' %></div>
                  </div>
                <% } %>
              </div>

              <!-- Size Selection -->
              <% 
                const allSizes = ['S', 'M', 'L', 'XL', 'XXL'];
                const productStock = product?.stock || {};
                const availableSizes = product?.size || [];
                
                let totalStock = 0;
                allSizes.forEach(size => {
                  totalStock += (productStock[size] || 0);
                });
                
                const isProductOutOfStock = totalStock === 0;
              %>
              
              <% if (!isProductOutOfStock) { %>
              <div class="mb-3">
                <div class="bt-1"></div>
                <form id="addToCartForm">
                  <div class="attr-detail attr-size">
                    <strong class="mr-10">Size</strong>
                    <ul class="list-filter size-filter font-small" id="sizeSelector">
                      <% allSizes.forEach((size) => { 
                        const stockForSize = productStock[size] || 0;
                      %>
                        <li class="<%= stockForSize === 0 ? 'disabled' : '' %>">
                          <a href="#" data-size="<%= size %>" data-stock="<%= stockForSize %>">
                            <%= size %>
                          </a>
                        </li>
                      <% }) %>
                    </ul>
                    <input type="hidden" id="selectedSize" name="size">
                  </div>

                  <div class="bt-1">
                    <p>
                      Availability:
                      <span class="in-stock ml-5" id="availabilityText">
                        Select a size
                      </span>
                    </p>
                  </div>

                  <div class="detail-extralink">
                    <button type="submit" class="button button-add-to-cart" disabled>
                      Add to cart
                    </button>
                  </div>
                </form>
              </div>
              <% } else { %>
                <div class="alert alert-danger" role="alert">
                  <i class="fas fa-times-circle me-2"></i>
                  <strong>Out of Stock</strong> - This product is currently unavailable in all sizes.
                </div>
                <button class="btn btn-secondary w-100" disabled>
                  <i class="fas fa-times-circle me-1"></i> Out of Stock
                </button>
              <% } %>
            </div>
          </div>
        </div>
      </div>
      <% if (product && product.description) { %>
              <div class="mt-4">
                <div class="description-toggle">
                  <button class="description" onclick="toggleDescription()">
                    <i class="fas fa-chevron-down me-2" id="desc-icon"></i>
                    Show Product Details
                  </button>
                </div>
                <div class="product-description" id="product-description" style="display: none;">
                  <p class="text-muted">
                    <%= product.description %>
                  </p>
                </div>
              </div>
              <% } %>
          </div>
        </div>

      <!-- Related Products -->
      <div class="related-section">
        <h3 class="section-title">
          <i class="fas fa-th-large me-2"></i>Related Products
        </h3>
        <div id="relatedRow" class="row g-4 row-cols-1 row-cols-md-2 row-cols-lg-4"></div>
      </div>
    </div>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const userDataElement = document.getElementById('user-data');
      const userId = userDataElement ? userDataElement.getAttribute('data-user') : null;
      const currentUser = userId ? { _id: userId } : null;
      
      // Parse product images
      let productImages = [];
      try {
        productImages = JSON.parse(userDataElement.getAttribute('data-images') || '[]');
      } catch (error) {
        console.error('Failed to parse images:', error);
      }

      // Parse product stock
      let productStock = {};
      try {
        productStock = JSON.parse(userDataElement.getAttribute('data-stock') || '{}');
      } catch (error) {
        console.error('Failed to parse stock:', error);
      }
      
      const totalStock = Object.values(productStock).reduce((sum, val) => sum + (parseInt(val) || 0), 0);
      
      // Image navigation
      let currentImageIndex = 0;
      const mainImage = document.getElementById('mainImage');
      const prevBtn = document.getElementById('prevImage');
      const nextBtn = document.getElementById('nextImage');

      if (productImages.length > 1) {
        prevBtn.addEventListener('click', function() {
          currentImageIndex = (currentImageIndex - 1 + productImages.length) % productImages.length;
          mainImage.src = productImages[currentImageIndex];
        });

        nextBtn.addEventListener('click', function() {
          currentImageIndex = (currentImageIndex + 1) % productImages.length;
          mainImage.src = productImages[currentImageIndex];
        });
      } else {
        // Hide arrows if only one image
        if (prevBtn) prevBtn.style.display = 'none';
        if (nextBtn) nextBtn.style.display = 'none';
      }

      // Size selection logic
      if (totalStock === 0) {
        console.log('Product is completely out of stock');
        return;
      }
      
      let selectedSize = null;
      const sizeLinks = document.querySelectorAll('#sizeSelector a');
      const availabilityText = document.getElementById('availabilityText');
      const submitBtn = document.querySelector('#addToCartForm button[type=submit]');

      sizeLinks.forEach(link => {
        link.addEventListener('click', function(e) {
          e.preventDefault();
          
          const stockForSize = parseInt(this.getAttribute('data-stock')) || 0;
          if (stockForSize === 0) return;
          
          selectedSize = this.getAttribute('data-size');
          document.getElementById('selectedSize').value = selectedSize;
          
          document.querySelectorAll('#sizeSelector li').forEach(li => li.classList.remove('active'));
          this.parentElement.classList.add('active');
          
          if (stockForSize > 0) {
            availabilityText.textContent = `Only ${stockForSize} left in stock`;
            availabilityText.className = 'in-stock text-success ml-5';
            if (submitBtn) submitBtn.disabled = false;
          } else {
            availabilityText.textContent = 'Out of stock';
            availabilityText.className = 'in-stock text-danger ml-5';
            if (submitBtn) submitBtn.disabled = true;
          }
        });
      });

      // Form submission
      const addToCartForm = document.getElementById('addToCartForm');
      if (addToCartForm) {
        addToCartForm.addEventListener('submit', async function(e) {
          e.preventDefault();

          if (!currentUser) {
            Swal.fire({
              icon: 'warning',
              title: 'Login Required',
              text: 'Please login to continue',
              confirmButtonText: 'Go to Login'
            }).then((result) => {
              if (result.isConfirmed) window.location.href = '/login';
            });
            return;
          }

          if (!selectedSize) {
            Swal.fire({
              icon: 'warning',
              title: 'Select Size',
              text: 'Please select a size before adding to cart',
              confirmButtonText: 'OK'
            });
            return;
          }

          const selectedStock = productStock[selectedSize] || 0;
          if (selectedStock < 1) {
            return Swal.fire({
              icon: 'error',
              title: 'Out of Stock!',
              text: 'This size is currently out of stock.'
            });
          }

          if (submitBtn) {
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status"></span> Adding...';
          }

          const productId = userDataElement.getAttribute('data-product-id');

          try {
            const response = await fetch('/user/addToCart', {
              method: 'POST',
              headers: { 
                'Content-Type': 'application/json',
                'Accept': 'application/json'
              },
              credentials: 'include',
              body: JSON.stringify({
                userId: currentUser._id,
                productId: productId,
                size: selectedSize,
                quantity: 1
              })
            });

            const data = await response.json();
            
            if (data.redirect) {
              await Swal.fire({
                icon: 'info',
                title: 'Login Required',
                text: data.message || 'Please login to add items to cart.',
                confirmButtonText: 'Go to Login'
              });
              window.location.href = data.redirect;
              return;
            }

            if (data.success) {
              await Swal.fire({
                icon: 'success',
                title: 'Added to Cart!',
                text: `Size ${selectedSize} added to your cart`,
                showConfirmButton: false,
                timer: 1500
              });
              
              if (submitBtn) {
                submitBtn.disabled = false;
                submitBtn.textContent = 'Add to cart';
              }
            } else {
              throw new Error(data.error || 'Failed to add to cart');
            }
          } catch (error) {
            console.error('Add to cart error:', error);
            await Swal.fire({
              icon: 'error',
              title: 'Error!',
              text: error.message || 'Could not add to cart. Please try again.'
            });
            
            if (submitBtn) {
              submitBtn.disabled = false;
              submitBtn.textContent = 'Add to cart';
            }
          }
        });
      }

      // Load Related Products
      async function loadRelatedProducts() {
        try {
          const currentProductId = userDataElement.getAttribute('data-product-id');
          const categoryId = userDataElement.getAttribute('data-category-id');
          
          if (!categoryId) return;

          const response = await fetch(`/api/products?category=${categoryId}&limit=4&exclude=${currentProductId}`);
          const data = await response.json();

          if (data.products && data.products.length > 0) {
            displayRelatedProducts(data.products);
          }
        } catch (error) {
          console.error('Error loading related products:', error);
        }
      }

      function displayRelatedProducts(products) {
        const relatedRow = document.getElementById('relatedRow');
        if (!relatedRow) return;

        relatedRow.innerHTML = products.map((product) => {
          const imageSrc = product.productImage && product.productImage[0] || '/images/placeholder.png';
          const productName = product.productName || 'Product';
          const price = Number(product.salePrice || product.regularPrice || 0);

          return `
            <div class="col">
              <a href="/productDetails/${product._id}" class="product-link">
                <div class="product-card">
                  <div class="product-card-image">
                    <img src="${imageSrc}" alt="${productName}">
                  </div>
                  <h6 class="product-card-title">${productName}</h6>
                  <div class="product-card-price">₹${price.toLocaleString('en-IN')}</div>
                  <button class="btn-add-to-cart-small" onclick="event.preventDefault();">
                    <i class="fas fa-cart-plus me-2"></i>View Details
                  </button>
                </div>
              </a>
            </div>
          `;
        }).join('');
      }

      // Initialize related products
      loadRelatedProducts();
    });
     // Toggle product description
        function toggleDescription() {
    const descElement = document.getElementById('product-description');
    const descIcon = document.getElementById('desc-icon');
    const toggleBtn = document.getElementById('toggle-btn');

    // If description is currently visible → hide it
    if (descElement.style.display === '' || descElement.style.display === 'block') {
      descElement.style.display = 'none';
      descIcon.classList.replace('fa-chevron-down', 'fa-chevron-up');
      toggleBtn.lastChild.textContent = ' Show Product Details';
    } 
    // If hidden → show it again
    else {
      descElement.style.display = 'block';
