      async function loadRelatedProducts() {
        try {
          const currentProductId = userDataElement.getAttribute('data-product-id');
          const categoryId = userDataElement.getAttribute('data-category-id');
          
          if (!categoryId) return;

          const response = await fetch(`/api/products?category=${categoryId}&limit=4&exclude=${currentProductId}`);
