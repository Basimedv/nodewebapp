<%- include("../partials/user/header") %>

    <style>
        .main-content-area {
            background: #fff;
            padding: 50px;
            border-radius: 20px;
            box-shadow: 0 4px 25px rgba(0, 0, 0, 0.05);
            max-width: 850px;
            margin: 40px auto 40px 320px;
            min-height: 500px;
        }

        .choice-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-bottom: 40px;
        }

        .choice-card {
            padding: 20px;
            border: 1px solid #e0e0e0;
            border-radius: 12px;
            cursor: pointer;
            text-align: center;
            background: #fdfdfd;
            font-weight: 600;
            transition: 0.3s;
        }

        .choice-card.active {
            background: #000;
            color: #fff;
            border-color: #000;
        }

        .settings-form-container {
            display: none;
            animation: fadeIn 0.3s ease;
        }

        .settings-form-container.active {
            display: block;
        }

        /* Fixed alignment grid */
        .form-group-row {
            display: grid;
            grid-template-columns: 30% 70%;
            /* Perfect label/input ratio */
            align-items: center;
            margin-bottom: 25px;
        }

        .label-cell {
            font-weight: 600;
            color: #333;
        }

        .input-cell input {
            width: 100%;
            padding: 14px;
            border: 1px solid #e0e0e0;
            border-radius: 10px;
            font-size: 14px;
            background: #fcfcfc;
        }

        .button-alignment-row {
            display: grid;
            grid-template-columns: 30% 70%;
            margin-top: 10px;
        }

        .btn-submit {
            grid-column: 2;
            /* Forces button to align under the input box */
            background: #000;
            color: #fff;
            border: none;
            padding: 14px 40px;
            border-radius: 10px;
            font-weight: 600;
            cursor: pointer;
            width: fit-content;
        }


        @keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }
        .password-wrapper {
  position: relative;
}

.password-wrapper input {
  padding-right: 45px;
}

.eye-icon {
  position: absolute;
  right: 15px;
  top: 50%;
  transform: translateY(-50%);
  cursor: pointer;
  color: #666;
  font-size: 18px;
}

.eye-icon:hover {
  color: #000;
}
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3">
                <div class="sidebar-container" style="position: fixed; left: 0; top: 160px;">
                    <%- include('../partials/user/profileSidebar', { activePage: 'privacy' }) %>
                </div>
            </div>

            <div class="col-lg-9">
                <div class="main-content-area">
                    <h4 class="fw-bold mb-4">Privacy & Security</h4>

                    <% if (isGoogleUser) { %>
                        <div class="text-center py-5">
                            <img src="https://cdn-icons-png.flaticon.com/512/300/300221.png" style="width: 60px;"
                                class="mb-4">
                            <h5 class="fw-bold">Google Login Active</h5>
                            <p class="text-muted">Passwords and emails are managed via Google.</p>
                            <a href="/profile" class="btn btn-dark mt-2">Back to Profile</a>
                        </div>
                        <% } else { %>
                            <div class="choice-grid">
                                <div class="choice-card active" onclick="switchTab('email-sec', this)">Update Email
                                </div>
                                <div class="choice-card" onclick="switchTab('pass-sec', this)">Change Password</div>
                            </div>

                            <div id="email-sec" class="settings-form-container active">
                                <div class="form-group-row">
                                    <div class="label-cell">New Email</div>
                                    <div class="input-cell"><input type="email" id="emailInp" value="<%= user.email %>">
                                    </div>
                                </div>
                                <div class="button-alignment-row">
                                    <button onclick="updateEmail()" class="btn-submit">Update Email</button>
                                </div>
                            </div>

                            <div id="pass-sec" class="settings-form-container">
                                <div class="form-group-row">
                                    <div class="label-cell">Current Password</div>
                                    <div class="input-cell password-wrapper">
                                        <input type="password" id="curPass" placeholder="••••••••">
                                        <i class="fa-solid fa-eye eye-icon"
                                            onclick="togglePassword('curPass', this)"></i>
                                    </div>
                                </div>
                                <div class="form-group-row">
                                    <div class="label-cell">New Password</div>
                                    <div class="input-cell password-wrapper">
                                        <input type="password" id="newPass" placeholder="••••••••">
                                        <i class="fa-solid fa-eye eye-icon"
                                            onclick="togglePassword('newPass', this)"></i>
                                    </div>
                                </div>
                                <div class="button-alignment-row">
                                    <button onclick="updatePassword()" class="btn-submit">Change Password</button>
                                </div>
                            </div>
                            <% } %>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function switchTab(id, el) {
            document.querySelectorAll('.choice-card').forEach(c => c.classList.remove('active'));
            document.querySelectorAll('.settings-form-container').forEach(s => s.classList.remove('active'));
            el.classList.add('active');
            document.getElementById(id).classList.add('active');
        }

        async function updatePassword() {
            const currentPassword = document.getElementById('curPass').value;
            const newPassword = document.getElementById('newPass').value;

            if (!currentPassword || !newPassword) {
                return Swal.fire('Error', 'Please fill all fields', 'error');
            }

            try {
                const res = await fetch('/change-password', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ currentPassword, newPassword })
                });
                const data = await res.json();

                if (data.success) {
                    Swal.fire('Updated!', data.message, 'success').then(() => location.reload());
                } else {
                    Swal.fire('Error', data.message, 'error');
                }
            } catch (err) {
                Swal.fire('Error', 'Could not connect to server', 'error');
            }
        }

        async function updateEmail() {
            const newEmail = document.getElementById('emailInp').value;
            const res = await fetch('/change-email', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ newEmail })
            });
            const data = await res.json();
            Swal.fire(data.success ? 'Success' : 'Error', data.message, data.success ? 'success' : 'error');
        }
    </script>