<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Find Account - U-Craft</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <style>
    body {
      background-image: url('/images/forgotPassword.jpeg');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      height: 100vh;
      margin: 0;
      font-family: 'Poppins', sans-serif;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    #loginContainer {
      display: flex;
      width: 800px;
      max-width: 95%;
      background: rgba(255, 255, 255, 0.9);
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 6px 18px rgba(0, 0, 0, 0.2);
    }

    #loginLeft {
      flex: 1;
      background: #f0f4f8;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 20px;
    }

    #loginLeft img {
      max-width: 80%;
      height: auto;
    }

    #loginRight {
      flex: 1.2;
      padding: 40px;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    #loginHeadLogo {
      width: 120px;
      margin-bottom: 10px;
    }

    h2 {
      font-size: 22px;
      margin-bottom: 15px;
      color: #333;
    }

    #rightBody {
      margin-top: 20px;
    }

    #rightBody label {
      display: block;
      font-size: 14px;
      font-weight: 500;
      margin-bottom: 6px;
      color: #333;
    }

    #rightBody input[type="email"] {
      width: 100%;
      padding: 12px 14px;
      border-radius: 6px;
      border: 1px solid #ccc;
      font-size: 15px;
      font-family: 'Poppins', sans-serif;
      outline: none;
      transition: border 0.3s ease, box-shadow 0.3s ease;
      margin-top: 8px;
      margin-bottom: 12px;
      box-sizing: border-box;
    }

    #rightBody input[type="email"]:focus {
      border-color: #007bff;
      box-shadow: 0 0 6px rgba(0, 123, 255, 0.4);
    }

    #rightBody button {
      width: 100%;
      padding: 12px 15px;
      background: #007bff;
      color: #fff;
      font-size: 15px;
      font-weight: 500;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      transition: background 0.3s ease, transform 0.1s ease;
    }

    #rightBody button:hover {
      background: #0056b3;
    }

    #rightBody button:active {
      transform: scale(0.97);
    }

    #emailError {
      color: red;
      font-size: 14px;
      margin-top: 5px;
    }

    .signupText {
      font-size: 14px;
      color: #555;
      margin-top: 10px;
      text-align: center;
    }

    .signupText a {
      color: #007bff;
      text-decoration: none;
      font-weight: 500;
    }

    .signupText a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <main>
    <div id="loginContainer">
      <div id="loginLeft">
        <img id="loginImage" src="/images/linevector.png" alt="Decorative background">
      </div>

      <div id="loginRight">
        <div id="rightHeader">
          <img src="/images/background/U-Craft_logo.png" alt="U-Craft Logo" id="loginHeadLogo">
          <h2>Let's Find Your Account.</h2>
        </div>

        <div id="rightBody">
          <form id="forgotForm" action="/forgot-Email-valid" method="post" onsubmit="return validateEmail()">
            <label for="email">What's your e-mail?</label>
            <input type="email" id="email" name="email" placeholder="Enter your email" required>
            
            <!-- Server-side error message -->
            <% if (error) { %>
              <p id="emailError"><%= error %></p>
            <% } else { %>
              <p id="emailError"></p>
            <% } %>

            <button type="submit">Send One-Time Password</button>
          </form>

          <p class="signupText">
            Don't have an account? <a href="/signup">Sign Up</a>
          </p>
        </div>
      </div>
    </div>
  </main>

  <script>
    function validateEmail() {
      const emailInput = document.getElementById("email").value;
      const errorText = document.getElementById("emailError");
      const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

      if (!emailPattern.test(emailInput)) {
        errorText.textContent = "‚ùå Please enter a valid email address.";
        return false;
      }
      errorText.textContent = "";
      return true;
    }
  </script>
</body>
</html>
