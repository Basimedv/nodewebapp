    }

    .apply-btn {
      background: #000;
      color: white;
      border: none;
      padding: 8px 25px;
      border-radius: 6px;
      cursor: pointer;
      font-weight: 500;
      transition: all 0.3s;
    }

    .apply-btn:hover {
      background: #333;
    }

    /* STOCK STATUS STYLES */
    .stock-status {
  text-align: center;
  margin: -8px 0 8px 0; /* moved a little up */
  font-size: 0.9rem;
  font-weight: 500;
}


    .stock-in {
      color: #28a745;
    }

    .stock-low {
      color: #ffc107;
    }

    .stock-out {
      color: #dc3545;
    }

    @media (max-width: 768px) {
      .filter-container {
        flex-direction: column;
        align-items: stretch;
      }

      .filter-group {
        width: 100%;
      }

      .filter-group input,
      .filter-group select {
        width: 100%;
      }
    }
    </style>
    
</head>

<body data-user-id="<%= user ? user._id : '' %>">

