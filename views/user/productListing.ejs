    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const addToCartButtons = document.querySelectorAll('.btn-add-cart');
        addToCartButtons.forEach(button => {
            button.addEventListener('click', async (e) => {
                e.preventDefault();
                const userId = document.body.dataset.userId;
                const productId = button.dataset.productId;
                const quantity = 1;
                const price = button.dataset.price;
                
                if (!userId) {
                    Swal.fire({ 
                        icon: 'error', 
                        text: 'Please login to continue.', 
                        showConfirmButton: true, 
                        confirmButtonText: 'Login' 
                    }).then((result) => { 
                        if (result.isConfirmed) { 
                            window.location.href = '/user/login'; 
                        } 
                    });
                    return;
                }
                
                const productDetails = { userId, productId, quantity, price };
                
                try {
                    const response = await fetch('/user/addToCart', { 
                        method: 'POST', 
                        headers: { 'Content-Type': 'application/json' }, 
                        body: JSON.stringify(productDetails) 
                    });
                    
                    const data = await response.json();
                    
                    if (!response.ok) { 
                        Swal.fire({ 
                            icon: 'warning', 
                            text: data.error, 
                            showConfirmButton: false, 
                            timer: 2000 
                        }); 
                    } else {
                        Swal.fire({ 
                            icon: 'success', 
                            text: 'Added to cart successfully', 
                            showConfirmButton: true, 
                            confirmButtonText: 'Go to Cart' 
                        }).then((result) => { 
                            if (result.isConfirmed) { 
                                window.location.href = '/user/cart'; 
                            } 
                        });
                    }
                } catch (error) {
                    Swal.fire({ 
                        icon: 'warning', 
                        text: 'An error occurred', 
                        showConfirmButton: false, 
                        timer: 2000 
                    });
                }
            });
        });

        const addToWishlistBtns = document.querySelectorAll('.wishlist-icon');
        addToWishlistBtns.forEach(button => {
            button.addEventListener('click', async function (e) {
                e.preventDefault();
                try {
                    const userId = document.body.dataset.userId;
                    const productId = this.getAttribute('data-product-id');
                    
                    if (!userId) {
                        Swal.fire({ 
                            icon: 'error', 
                            text: 'Please login to continue.', 
                            showConfirmButton: true, 
                            confirmButtonText: 'Login' 
                        }).then((result) => { 
                            if (result.isConfirmed) { 
                                window.location.href = '/user/login'; 
                            } 
                        });
                        return;
                    }
                    
                    const response = await fetch('/user/addToWishlist', { 
                        method: 'POST', 
                        headers: { 'Content-Type': 'application/json' }, 
                        body: JSON.stringify({ userId, productId }) 
                    });
                    
                    const data = await response.json();
                    
                    if (!response.ok) { 
                        Swal.fire({ 
                            icon: 'error', 
                            text: data.error || 'Something went wrong', 
                            timer: 1500, 
                            showConfirmButton: false 
                        }); 
                    } else { 
                        Swal.fire({ 
                            position: 'top-end', 
                            text: data.message, 
                            timer: 1500, 
                            showConfirmButton: false 
                        }); 
                    }
                } catch (error) { 
                    console.error('Add to wishlist error: ', error); 
                }
            });
        });
    </script>
