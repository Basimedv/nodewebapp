      padding: 20px 30px;
      margin: 20px 0;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(71, 70, 70, 0.08);
    }

    .filter-container {
      display: flex;
      align-items: center;
      gap: 20px;
      flex-wrap: wrap;
      justify-content: center;
    }

    .filter-group {
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .filter-group label {
      font-weight: 500;
      color: #333;
      margin: 0;
      white-space: nowrap;
    }

