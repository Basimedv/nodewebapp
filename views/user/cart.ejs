               function changeQuantity(itemId, action) {
    const input = document.getElementById(`quantity-${itemId}`);
    if (!input) {
        console.error('Quantity input not found for item:', itemId);
        Swal.fire({ 
            icon: 'error', 
            text: 'Quantity input not found',
            timer: 2000,
            showConfirmButton: false
        });
        return;
    }

    let value = parseInt(input.value);
    const maxStock = parseInt(input.dataset.maxStock) || 10;
    
    if (action === 'minus') {
        if (value <= 1) {
            // Show warning exactly like the screenshot
            Swal.fire({ 
                icon: 'warning',
                title: 'Minimum Quantity',
                html: '<p style="margin: 0;">Quantity unchanged as it\'s already at minimum</p>',
                confirmButtonText: 'OK',
                confirmButtonColor: '#6366f1',
                customClass: {
                    popup: 'custom-swal-popup',
                    icon: 'custom-swal-icon'
                }
            });
            return;
        }
        value--;
    } else if (action === 'plus') {
        // Check against actual stock first
        if (value >= maxStock) {
            Swal.fire({ 
                icon: 'warning', 
                title: 'Stock Limit Reached',
                html: `<p style="margin: 0;">Only <strong>${maxStock}</strong> items available in this size</p>`,
                confirmButtonText: 'OK',
                confirmButtonColor: '#6366f1',
                customClass: {
                    popup: 'custom-swal-popup'
                }
            });
            return;
        }
        
        // Check against max cart limit
        if (value >= 10) {
            Swal.fire({ 
                icon: 'warning', 
                title: 'Maximum Quantity',
                text: 'Maximum quantity limit is 10 per item',
                confirmButtonText: 'OK',
                confirmButtonColor: '#6366f1'
            });
            return;
        }
        
        value++;
    }

    input.value = value;
    updateQuantity(itemId, value);
}
                function validateQuantity(itemId, value) {
                    const input = document.getElementById(`quantity-${itemId}`);
                    if (!input) return;

                    const numValue = parseInt(value);

                    // Remove previous validation classes
                    input.classList.remove('is-valid', 'is-invalid');

                    if (value === '' || isNaN(numValue)) {
                        input.classList.add('is-invalid');
                        return;
                    }

                    if (numValue < 1 || numValue > 10) {
                        input.classList.add('is-invalid');
                    } else {
                        input.classList.add('is-valid');
                    }
                }

                function updateQuantityDirect(itemId, value) {
                    const numValue = parseInt(value);

                    if (isNaN(numValue)) {
                        Swal.fire({
                            icon: 'warning',
                            title: 'Invalid Input',
                            text: 'Please enter a valid number between 1 and 10.',
                            confirmButtonText: 'OK',
                            confirmButtonColor: '#667eea'
                        });
                        const input = document.getElementById(`quantity-${itemId}`);
                        if (input) input.value = 1;
                        return;
                    }

                    // Check if trying to set to 0 or below
                    if (numValue < 1) {
                        Swal.fire({
                            icon: 'warning',
                            title: 'Minimum Quantity',
                            text: 'Quantity cannot be less than 1. Set to minimum value.',
                            confirmButtonText: 'OK',
                            confirmButtonColor: '#667eea'
                        });
                        const input = document.getElementById(`quantity-${itemId}`);
                        if (input) input.value = 1;
                        updateQuantity(itemId, 1);
                        return;
                    }

                    // Check maximum
                    if (numValue > 10) {
                        Swal.fire({
                            icon: 'warning',
                            title: 'Maximum Quantity',
                            text: 'Quantity cannot exceed 10. Set to maximum value.',
                            confirmButtonText: 'OK',
                            confirmButtonColor: '#667eea'
                        });
                        const input = document.getElementById(`quantity-${itemId}`);
                        if (input) input.value = 10;
                        updateQuantity(itemId, 10);
                        return;
                    }

                    // Valid quantity - update
                    const input = document.getElementById(`quantity-${itemId}`);
                    if (input) {
                        input.value = numValue;
                        updateQuantity(itemId, numValue);
                    }
                }

                async function updateQuantity(itemId, quantity) {
                    try {
                        console.log('Updating quantity for item:', itemId, 'to:', quantity);

                        // Show loading state
                        const input = document.getElementById(`quantity-${itemId}`);
                        const previousValue = input ? parseInt(input.value) : quantity;

                        if (input) {
                            input.disabled = true;
                        }

                        const response = await fetch('/user/updateCartQuantity', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ userId, itemId, quantity })
                        });

                        if (!response.ok) {
                            throw new Error(`HTTP error! status: ${response.status}`);
                        }

                        const data = await response.json();
                        console.log('Update response:', data);

                        if (data.success) {
                            // Update the item's total price in the DOM
                            const cartItem = input.closest('.cart-item');
                            if (cartItem && data.updatedItem) {
                                const itemTotalElement = cartItem.querySelector('.cart-item-total');
                                if (itemTotalElement) {
                                    itemTotalElement.textContent = `Total: ₹${data.updatedItem.totalPrice.toLocaleString('en-IN')}`;
                                }
                            }

                            // Update order summary totals
                            updateCartTotals();

                            // Show subtle success notification
                            const Toast = Swal.mixin({
                                toast: true,
                                position: 'top-end',
                                showConfirmButton: false,
                                timer: 2000,
                                timerProgressBar: true
                            });

                            Toast.fire({
                                icon: 'success',
                                title: 'Quantity updated'
                            });
                        } else {
                            throw new Error(data.error || 'Failed to update quantity');
                        }
                    } catch (error) {
                        console.error('Quantity update error:', error);

                        // Revert input to previous value
                        if (input) {
                            input.value = previousValue;
                        }

                        // Check if it's a stock limit error
                        if (error.message.includes('available')) {
                            Swal.fire({
                                icon: 'warning',
                                title: 'Stock Limit',
                                text: error.message,
                                confirmButtonText: 'OK',
                                confirmButtonColor: '#667eea'
                            });
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Update Failed',
                                text: error.message || 'Unable to update quantity. Please try again.',
                                confirmButtonText: 'OK',
                                confirmButtonColor: '#667eea'
                            });
                        }
                    } finally {
                        // Re-enable input
                        if (input) {
                            input.disabled = false;
                        }
                    }
                }

                async function removeFromCart(itemId) {
                    console.log('=== FRONTEND REMOVE DEBUG ===');
                    console.log('Remove function called with itemId:', itemId);

                    if (!userId || userId === '') {
                        Swal.fire({
                            icon: 'warning',
                            title: 'Login Required',
                            text: 'Please login to remove items from your cart',
                            confirmButtonText: 'Go to Login',
                            confirmButtonColor: '#667eea'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                window.location.href = '/login';
                            }
                        });
                        return;
                    }

                    const result = await Swal.fire({
                        title: 'Remove Item?',
                        text: 'Are you sure you want to remove this item from your cart?',
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonText: 'Yes, Remove It',
                        cancelButtonText: 'Cancel',
                        confirmButtonColor: '#dc3545',
                        cancelButtonColor: '#6c757d',
                        allowOutsideClick: false
                    });

                    if (result.isConfirmed) {
                        try {
                            const response = await fetch('/user/removeFromCart', {
                                method: 'POST',
                                headers: { 'Content-Type': 'application/json' },
                                body: JSON.stringify({ userId, productId: itemId })
                            });

                            if (!response.ok) {
                                throw new Error(`HTTP error! status: ${response.status}`);
                            }

                            const data = await response.json();

                            if (data.success) {
                                // Find and remove the cart item from DOM
                                const cartItem = document.querySelector(`[data-item-id="${itemId}"]`);

                                if (cartItem) {
                                    cartItem.style.transition = 'all 0.3s ease';
                                    cartItem.style.transform = 'translateX(-100%)';
                                    cartItem.style.opacity = '0';

                                    setTimeout(() => {
                                        cartItem.remove();
                                        updateCartTotals();

                                        Swal.fire({
                                            icon: 'success',
                                            title: 'Removed!',
                                            text: 'Item has been removed from your cart.',
                                            timer: 2000,
                                            showConfirmButton: false
                                        });
                                    }, 300);
                                } else {
                                    // Fallback if element not found
                                    window.location.reload();
                                }
                            } else {
                                throw new Error(data.error || 'Failed to remove item');
                            }
                        } catch (error) {
                            console.error('Remove error:', error);
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: error.message || 'Unable to remove item. Please try again.',
                                confirmButtonText: 'OK',
                                confirmButtonColor: '#667eea'
                            });
                        }
                    }
                }

                function updateCartTotals() {
                    const cartItems = document.querySelectorAll('.cart-item');
                    const itemCount = cartItems.length;

                    if (itemCount === 0) {
                        setTimeout(() => {
                            window.location.reload();
                        }, 500);
                        return;
                    }

                    // Recalculate totals from visible items
                    let subtotal = 0;

                    cartItems.forEach(item => {
                        const quantityInput = item.querySelector('.quantity-input');
                        const priceElement = item.querySelector('.cart-item-price .text-success, .cart-item-price');

                        if (quantityInput && priceElement) {
                            const quantity = parseInt(quantityInput.value) || 1;

                            // Get the price from the element
                            let price = 0;
                            const priceText = priceElement.textContent;

                            // Try to find sale price first (in green text)
                            const salePriceMatch = priceText.match(/₹([\d,]+)/);
                            if (salePriceMatch) {
                                price = parseInt(salePriceMatch[1].replace(/,/g, ''));
                            }

                            const itemTotal = price * quantity;
                            subtotal += itemTotal;

                            // Update individual item total if element exists
                            const itemTotalElement = item.querySelector('.cart-item-total');
                            if (itemTotalElement) {
                                itemTotalElement.textContent = `Total: ₹${itemTotal.toLocaleString('en-IN')}`;
                            }
                        }
                    });

                    // Update summary section - Subtotal
                    const summaryRows = document.querySelectorAll('.summary-row');
                    summaryRows.forEach(row => {
                        const spans = row.querySelectorAll('span');
                        if (spans.length >= 2) {
                            const labelText = spans[0].textContent.toLowerCase();
                            if (labelText.includes('subtotal')) {
                                spans[1].textContent = `₹${subtotal.toLocaleString('en-IN')}`;
                            }
                        }
                    });

                    // Update total in summary-total section
                    const totalRow = document.querySelector('.summary-total');
                    if (totalRow) {
                        const totalSpans = totalRow.querySelectorAll('span');
                        if (totalSpans.length >= 2) {
                            totalSpans[1].innerHTML = `<strong>₹${subtotal.toLocaleString('en-IN')}</strong>`;
                        }
                    }

                    // Update item count in header
                    const cartHeader = document.querySelector('.cart-header h2');
                    if (cartHeader) {
                        cartHeader.innerHTML = `<i class="fas fa-shopping-cart me-2"></i>Shopping Cart (${itemCount} items)`;
                    }

                    // Update header cart badge if exists
                    const cartBadge = document.querySelector('.icon-btn .badge');
                    if (cartBadge) {
                        cartBadge.textContent = itemCount;
                    }

                    console.log('Cart totals updated - Subtotal:', subtotal, 'Items:', itemCount);
                }

