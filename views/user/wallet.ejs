<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Wallet' %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #3B3389;
        }
        
        body {
            background-color: #f5f5f5;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        }
        
        .profile-container {
            min-height: 100vh;
            padding: 40px 0;
        }
        
        .col-md-9 {
            max-width: 1100px;
            margin: 0 auto;
        }
        
        .wallet-header {
            background: white;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
            margin-bottom: 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .wallet-title-section {
            display: flex;
            align-items: center;
            gap: 15px;
        }
        
        .wallet-icon {
            width: 50px;
            height: 50px;
            background: var(--primary);
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 24px;
        }
        
        .wallet-title {
            margin: 0;
            font-size: 28px;
            font-weight: 600;
            color: var(--primary);
        }
        
        .wallet-subtitle {
            margin: 0;
            color: #6c757d;
            font-size: 14px;
        }
        
        .btn-add-money {
            background: var(--primary);
            color: white;
            border: none;
            padding: 12px 30px;
            border-radius: 8px;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: all 0.2s;
        }
        
        .btn-add-money:hover {
            background: #2a2b7a;
            transform: translateY(-2px);
        }
        
        .balance-section {
            background: white;
            padding: 0;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
            margin-bottom: 30px;
            display: grid;
            grid-template-columns: 1fr 1fr;
        }
        
        .balance-card {
            padding: 30px;
            border-left: 4px solid var(--primary);
        }
        
        .balance-card:last-child {
            border-left: 1px solid #f0f0f0;
        }
        
        .balance-label {
            font-size: 14px;
            color: #6c757d;
            margin-bottom: 10px;
        }
        
        .balance-amount {
            font-size: 32px;
            font-weight: 700;
            color: var(--primary);
            margin: 0;
        }
        
        .transaction-info {
            font-size: 16px;
            color: #2c3e50;
            font-weight: 500;
            margin: 0;
        }
        
        .benefits-section {
            background: white;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
            margin-bottom: 30px;
        }
        
        .benefits-title {
            font-size: 20px;
            font-weight: 600;
            color: var(--primary);
            margin-bottom: 25px;
        }
        
        .benefits-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 30px;
        }
        
        .benefit-item {
            text-align: center;
        }
        
        .benefit-icon {
            width: 60px;
            height: 60px;
            background: #f8f9fa;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 15px;
            color: var(--primary);
            font-size: 24px;
        }
        
        .benefit-title {
            font-size: 16px;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 8px;
        }
        
        .benefit-description {
            font-size: 14px;
            color: #6c757d;
            margin: 0;
        }
        
        .wallet-tip {
            background: white;
            padding: 25px 30px;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
            border-left: 4px solid var(--primary);
        }
        
        .tip-title {
            font-size: 16px;
            font-weight: 600;
            color: var(--primary);
            margin-bottom: 8px;
        }
        
        .tip-text {
            font-size: 14px;
            color: #6c757d;
            margin: 0;
        }
        
        .modal {
            z-index: 1050 !important;
        }
        
        .modal-backdrop {
            z-index: 1040 !important;
            background-color: rgba(0, 0, 0, 0.5);
        }
        
        .modal-dialog {
            z-index: 1060 !important;
        }
        
        .modal-content {
            border: none;
            border-radius: 12px;
            position: relative;
            z-index: 1070 !important;
        }
        
        .modal-header {
            border-bottom: 1px solid #f0f0f0;
            padding: 20px 30px;
        }
        
        .modal-title {
            color: var(--primary);
            font-weight: 600;
        }
        
        .modal-body {
            padding: 30px;
        }
        
        .form-label {
            font-weight: 500;
            color: #2c3e50;
            margin-bottom: 8px;
        }
        
        .form-control:focus,
        .form-select:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 0.2rem rgba(59, 51, 137, 0.25);
        }
        
        @media (max-width: 768px) {
            .balance-section {
                grid-template-columns: 1fr;
            }
            
            .balance-card:last-child {
                border-left: 4px solid var(--primary);
                border-top: 1px solid #f0f0f0;
            }
            
            .benefits-grid {
                grid-template-columns: 1fr;
            }
            
            .wallet-header {
                flex-direction: column;
                gap: 20px;
                text-align: center;
            }
        }
    </style>
</head>
<body>
    <%- include("../partials/user/header") %>
    
    <div class="profile-container">
        <div class="row">
            <div class="col-md-3">
                <%- include('../partials/user/profileSidebar', { activePage: 'wallet', user: user }) %>
            </div>
            <div class="col-md-9">
                <!-- Wallet Header -->
                <div class="wallet-header">
                    <div class="wallet-title-section">
                        <div class="wallet-icon">
                            <i class="fas fa-wallet"></i>
                        </div>
                        <div>
                            <h1 class="wallet-title">Your Wallet</h1>
                            <p class="wallet-subtitle">Manage your balance</p>
                        </div>
                    </div>
                    <button class="btn-add-money" data-bs-toggle="modal" data-bs-target="#addMoneyModal">
                        <i class="fas fa-plus"></i> Add Money
                    </button>
                </div>

                <!-- Balance Section -->
                <div class="balance-section">
                    <div class="balance-card">
                        <p class="balance-label">Current Balance</p>
                        <h2 class="balance-amount">₹<%= wallet.balance || 0 %></h2>
                    </div>
                    <div class="balance-card">
                        <p class="balance-label">Last Transaction</p>
                        <% if (transactions && transactions.length > 0) { %>
                            <% const lastTransaction = transactions[0]; %>
                            <p class="transaction-info">
                                <%= new Date(lastTransaction.date).toLocaleDateString() %> - 
                                <%= lastTransaction.description %> - 
                                ₹<%= lastTransaction.amount %>
                            </p>
                        <% } else { %>
                            <p class="transaction-info">No transactions yet</p>
                        <% } %>
                    </div>
                </div>

                <!-- Wallet Benefits -->
                <div class="benefits-section">
                    <h2 class="benefits-title">Wallet Benefits</h2>
                    <div class="benefits-grid">
                        <div class="benefit-item">
                            <div class="benefit-icon">
                                <i class="fas fa-bolt"></i>
                            </div>
                            <h3 class="benefit-title">Fast Checkout</h3>
                            <p class="benefit-description">Pay instantly without entering card details.</p>
                        </div>
                        <div class="benefit-item">
                            <div class="benefit-icon">
                                <i class="fas fa-shield-halved"></i>
                            </div>
                            <h3 class="benefit-title">Secure Payments</h3>
                            <p class="benefit-description">Your money is safe with us.</p>
                        </div>
                        <div class="benefit-item">
                            <div class="benefit-icon">
                                <i class="fas fa-gift"></i>
                            </div>
                            <h3 class="benefit-title">Exclusive Offers</h3>
                            <p class="benefit-description">Get discounts when you use wallet.</p>
                        </div>
                    </div>
                </div>

                <!-- Wallet Tip -->
                <div class="wallet-tip">
                    <h3 class="tip-title">Wallet Tip</h3>
                    <p class="tip-text">Keep a minimum balance of ₹500 to enjoy seamless shopping and exclusive wallet-only discounts!</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Add Money Modal -->
    <div class="modal fade" id="addMoneyModal" tabindex="-1" aria-labelledby="addMoneyModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addMoneyModalLabel">Add Money to Wallet</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="addMoneyForm">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="amount" class="form-label">Amount (₹)</label>
                            <input type="number" class="form-control" id="amount" name="amount" min="1" step="0.01" required placeholder="Enter amount">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Payment Method</label>
                            <select class="form-select" id="paymentMethod" name="paymentMethod">
                                <option value="" disabled selected>Select payment method</option>
                                <option value="cash">Cash on Delivery</option>
                                <option value="bank_transfer">Bank Transfer</option>
                                <option value="upi">UPI Payment</option>
                                <option value="other">Other</option>
                            </select>
                        </div>
                        <div class="alert alert-info">
                            <small>
                                <i class="fas fa-info-circle me-2"></i>
                                This is a demo implementation. In production, integrate with actual payment gateway.
                            </small>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary" style="background: var(--primary); border: none;">Add Money</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        async function handleAddMoney(e) {
            e.preventDefault();

            const amount = document.getElementById('amount').value.trim();
            const paymentMethod = document.getElementById('paymentMethod').value;

            if (!amount || isNaN(amount) || amount <= 0) {
                await Swal.fire({
                    title: "Invalid Amount",
                    text: "Please enter a valid amount.",
                    icon: "warning"
                });
                return;
            }

            if (!paymentMethod) {
                await Swal.fire({
                    title: "Payment Method Required",
                    text: "Please select a payment method.",
                    icon: "warning"
                });
                return;
            }

            try {
                Swal.fire({
                    title: "Processing...",
                    text: "Adding money to your wallet",
                    icon: "info",
                    allowOutsideClick: false,
                    showConfirmButton: false,
                    didOpen: () => {
                        Swal.showLoading();
                    }
                });

                const response = await fetch('/user/wallet', {
                    method: "POST",
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ amount, paymentMethod })
                });

                const result = await response.json();

                if (!response.ok || !result.success) {
                    throw new Error(result.error || "Failed to add money to wallet");
                }

                await Swal.fire({
                    title: "Success!",
                    text: `₹${amount} added to your wallet successfully.`,
                    icon: "success",
                    timer: 2000,
                    showConfirmButton: false
                });
                
                const modal = bootstrap.Modal.getInstance(document.getElementById('addMoneyModal'));
                if (modal) {
                    modal.hide();
                }
                document.getElementById('addMoneyForm').reset();
                window.location.reload();

            } catch (error) {
                console.error('Error adding money to wallet:', error);
                await Swal.fire({
                    title: "Error",
                    text: error.message || "Failed to add money to wallet. Please try again.",
                    icon: "error"
                });
            }
        }

        document.getElementById('addMoneyForm').addEventListener('submit', handleAddMoney);
    </script>
</body>
</html>