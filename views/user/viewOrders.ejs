    <body>
        
        <%- include("../partials/user/header") %>
        
        <div class="profile-container">
            <div class="row">
                <div class="col-md-3">
                    <%- include('../partials/user/profileSidebar', { activePage: 'orders', user: user }) %>
                </div>
                <div class="col-md-9">
                    <main class="main-content">
                        <!-- Orders Header -->
                        <div class="orders-header">
                            <h1 class="orders-title">My Orders</h1>
                            <p class="orders-subtitle">Track and manage your orders</p>
        <!-- Orders Grid -->
        <% if (orders && orders.length > 0) { %>
            <div class="orders-grid">
                <% orders.forEach(function(order, orderIndex) { %>
                    <div class="order-card">
                        <!-- Order Header -->
                        <div class="order-header">
                            <div class="order-info">
                                <div class="order-id">Order #<%= order.orderId %></div>
                                <div class="order-date"><%= new Date(order.createdOn).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></div>
                            </div>
                            <div class="order-status status-<%= order.status.toLowerCase() %>">
                                <%= order.status %>
                            </div>
                        </div>

                        <!-- Order Items -->
                        <div class="order-items">
                            <% if (order.orderedItems && order.orderedItems.length > 0) { %>
                                <% order.orderedItems.forEach(function(item, itemIndex) { %>
                                    <div class="order-item">
                                        <% 
                                        // Get product image from multiple sources
                                        let productImage = '/images/colinguest.png';
                                        if (item.productImage && Array.isArray(item.productImage) && item.productImage.length > 0) {
                                            productImage = item.productImage[0];
                                        } else if (item.product && item.product.productImage && Array.isArray(item.product.productImage) && item.product.productImage.length > 0) {
                                            productImage = item.product.productImage[0];
                                        }
                                        
                                        // Get product name from multiple sources - comprehensive logic
                                        let productName = 'Product';
                                        if (item.productName && item.productName.trim()) {
                                            productName = item.productName.trim();
                                        } else if (item.product && item.product.productName && item.product.productName.trim()) {
                                            productName = item.product.productName.trim();
                                        } else if (item.product && item.product.name && item.product.name.trim()) {
                                            productName = item.product.name.trim();
                                        } else if (item.product && item.product.product && item.product.product.name && item.product.product.name.trim()) {
                                            productName = item.product.product.name.trim();
                                        }
                                        %>
                                        <img src="<%= productImage %>" 
                                             alt="<%= productName %>" 
                                             class="product-image"
                                             onerror="this.src='/images/colinguest.png';">
                                        <div class="product-details">
                                            <div class="product-name"><%= productName %></div>
                                            <div class="product-meta">
                                                <span>Qty: <%= item.quantity || 1 %></span>
                                                <% if (item.size) { %>
                                                    <span>Size: <%= item.size %></span>
                                                <% } %>
                                                <% if (item.color) { %>
                                                    <span>Color: <%= item.color %></span>
                                                <% } %>
                                            </div>
                                        </div>
                                        <div class="product-price">₹<%= ((item.price || 0) * (item.quantity || 1)).toLocaleString('en-IN') %></div>
                                    </div>
                                <% }); %>
                            <% } else { %>
                                <div style="text-align: center; padding: 20px; color: #999;">
                                    <i class="fas fa-box-open" style="font-size: 24px; margin-bottom: 10px; opacity: 0.5;"></i>
                                    <p>No items found in this order</p>
                                </div>
                            <% } %>
                        </div>

                        <!-- Order Total -->
                        <div class="order-total">
                            <span class="total-label">Total</span>
                            <span class="total-amount">₹<%= order.finalAmount.toLocaleString('en-IN') %></span>
                            <div class="order-actions">
                                <button class="btn-view-order" onclick="viewOrderDetails('<%= order._id %>')" title="View Order Details">
                                    <i class="fas fa-eye"></i>
                                    View Order
                                </button>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <!-- No Orders -->
            <div class="no-orders">
                <div class="no-orders-icon">
                    <i class="fas fa-shopping-bag"></i>
                </div>
                <h2 class="no-orders-text">No orders yet</h2>
                <p>You haven't placed any orders yet. Start shopping to see your orders here!</p>
                <a href="/shop" class="btn-shop">
                    <i class="fas fa-shopping-cart"></i> Start Shopping
                </a>
            </div>
        <% } %>
    </main>
</div>

<%- include("../partials/user/footer") %>

<script>
    function viewOrderDetails(orderId) {
        window.location.href = '/user/orders/' + orderId;
    }
</script>
