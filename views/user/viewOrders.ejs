        }
        
        .orders-header {
            margin-bottom: 30px;
        }
        
        .orders-title {
            font-size: 24px;
            font-weight: 600;
            color: #1a1a1a;
            margin-bottom: 8px;
        }
        
        .orders-subtitle {
            color: #666;
            font-size: 14px;
        }
        
        .orders-grid {
            display: grid;
            gap: 20px;
        }
        
        .order-card {
