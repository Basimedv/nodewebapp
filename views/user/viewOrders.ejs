    <style>
        body {
            background-color: #f5f5f5;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        }
        
        .profile-container {
            display: flex;
            min-height: 100vh;
        }
        
        .sidebar {
            width: 280px;
            height: 600px;
            background: transparent;
            padding: 30px 0;
            border-right: 1px solid rgba(0, 0, 0, 0.08);
            box-shadow:
                2px 0 4px rgba(0, 0, 0, 0.08),
                6px 0 12px rgba(0, 0, 0, 0.12),
                12px 0 24px rgba(0, 0, 0, 0.16);
            position: relative;
        }
        
        .sidebar-header {
            text-align: center;
            padding: 0 20px 30px;
            border-bottom: 1px solid #e5e5e5;
        }
        
        .profile-avatar {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            object-fit: cover;
            margin-bottom: 12px;
        }
        
        .profile-avatar-placeholder {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 12px;
        }
        
        .sidebar-menu {
            margin-top: 20px;
        }
        
        .sidebar-menu-item {
            display: flex;
            align-items: center;
            padding: 14px 25px;
            color: #333;
            text-decoration: none;
            transition: all 0.2s;
            border-left: 3px solid transparent;
        }
        
        .sidebar-menu-item:hover {
            background-color: #f8f9fa;
            color: #198754;
        }
        
