<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Reset Password</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <!-- SweetAlert2 -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <style>
    body {
      font-family: 'Poppins', sans-serif;
    background-image: url(/images/signupimage.jpeg);
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
    }
   .container {
  max-width: 400px;
  width: 100%;
  background: rgba(255, 255, 255, 0.1);  /* transparent white layer */
  padding: 25px;
  border-radius: 12px;
  border: 1px solid rgba(255, 255, 255, 0.2); /* light border */
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);  /* 3D shadow */
  backdrop-filter: blur(12px);                /* ðŸ’¡ background blur */
  -webkit-backdrop-filter: blur(12px);        /* for Safari */
  text-align: center;
  color: #fff;                                /* text visible on dark bg */
  transition: all 0.3s ease;
}

.container:hover {
  box-shadow: 0 12px 30px rgba(0, 0, 0, 0.3);
  border-color: rgba(255, 255, 255, 0.3);
  transform: translateY(-3px); /* small lift on hover */
}

    h2 {
      margin-bottom: 20px;
      color: #0d0d0d;
    }
    input {
      width: 100%;
      padding: 10px;
      margin-bottom: 15px;
      border-radius: 5px;
      border: transparent;
    }
    button {
      width: 100%;
      padding: 12px;
      background: #581808;
      color: #f5f5f5;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 16px;
    }

    .resetpassword {
  width: 100%;
  padding: 10px 15px;
  background: transparent;      /* transparent background */
  color: #fff;                  /* white text */

  border-radius: 8px;
  outline: none;
  font-size: 16px;

}

.resetpassword::placeholder {
  color: rgba(255, 255, 255, 0.6); /* light transparent placeholder */
}



  </style>
</head>
<body>
  <div class="container">
    <h2>Reset Password</h2>

    <form id="resetForm" action="/resetpassword" method="POST">
      <input  class="resetpassword" type="password" id="password" name="password" placeholder="New Password" required>
      <input class="resetpassword" type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password" required>
      <button type="submit">Update Password</button>
    </form>
  </div>

  <script>
    const form = document.getElementById("resetForm");

    form.addEventListener("submit", function(e) {
      e.preventDefault(); // prevent default submission

      const password = document.getElementById("password").value.trim();
      const confirmPassword = document.getElementById("confirmPassword").value.trim();

      // Regex: at least 1 uppercase, 1 lowercase, 1 number, 1 special char, min 8 chars
      const passwordRegex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&]).{8,}$/;

      if (!passwordRegex.test(password)) {
        Swal.fire({
          icon: 'error',
          title: 'Invalid Password',
          text: 'âŒ Password must be at least 8 characters, include uppercase, lowercase, number, and symbol.'
        });
        return;
      }

      if (password !== confirmPassword) {
        Swal.fire({
          icon: 'error',
          title: 'Mismatch',
          text: 'âŒ Passwords do not match.'
        });
        return;
      }

      // âœ… If validation passes, submit the form
      fetch('/resetpassword', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ password, confirmPassword })
      })
      .then(res => res.json())
      .then(data => {
        if(data.success){
          Swal.fire({
            icon: 'success',
            title: 'Password Updated!',
            text: 'Redirecting to login...',
            timer: 2000,
            showConfirmButton: false
          }).then(() => {
            window.location.href = '/login';
          });
        } else {
          Swal.fire({
            icon: 'error',
            title: 'Error',
            text: data.message || 'Something went wrong.'
          });
        }
      })
      .catch(err => {
        Swal.fire({
          icon: 'error',
          title: 'Error',
          text: 'Something went wrong.'
        });
      });

    });
  </script>
</body>
</html>
