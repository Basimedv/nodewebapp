<body>
    <%- include("../partials/user/header") %>
    
    <div class="page-container">
        <!-- Sidebar -->
        <div class="col-md-3">
            <%- include('../partials/user/profileSidebar', { activePage: 'orderDetails', user: user }) %>
        </div>
        
        <!-- Main Content -->
        <main class="main-content">
            <div class="page-header">
                <h1 class="page-title">Order Details</h1>
                <p class="page-subtitle">View complete order information</p>
            </div>
            
            <% if (order) { %>
                <!-- Order Card -->
                <div class="order-card">
                    <!-- Order Header -->
                    <div class="order-header">
                        <div>
                            <h2 class="order-id">Order #<%= order.orderId %></h2>
                            <p class="order-date"><%= new Date(order.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></p>
                        </div>
                      <div class="order-status-actions">
    <% if (returnRequest && returnRequest.status === 'Approved') { %>
        <span class="status-badge status-approved">
            Refund Approved
        </span>
    <% } else { %>
        <span class="status-badge status-<%= order.status.toLowerCase().replace(' ', '-') %>">
            <%= order.status %>
        </span>
    <% } %>
    <% if (returnRequest) { %>
        <span class="status-badge status-<%= returnRequest.status.toLowerCase() %>">
            Return: <%= returnRequest.status %>
        </span>
    <% } %>
    
    <% if (order.status === 'Delivered' && !returnRequest) { %>
      <button class="btn-return" onclick="returnOrder('<%= order.orderId %>')">
    <i class="fas fa-undo"></i> Return
</button>
    <% } else if (order.status !== 'Cancelled' && order.status !== 'Delivered' && order.status !== 'Return Request' && order.status !== 'Returned') { %>
        <button class="btn-cancel" onclick="cancelOrder('<%= order.orderId %>')">
            <i class="fas fa-times"></i> Cancel Order
        </button>
    <% } %>
    
    <button class="btn-invoice" onclick="downloadInvoice('<%= order._id %>')">
        <i class="fas fa-download"></i> Invoice
    </button>
</div>
                    </div>
                    
                    <!-- Order Items -->
                    <h3 class="section-title">Order Items</h3>
                    <% if (order.orderedItems && order.orderedItems.length > 0) { %>
                        <% order.orderedItems.forEach(function(item) { %>
                            <div class="order-item">
                                <% 
                                    // Get product image from multiple sources - comprehensive logic
                                    let productImage = null;
                                    if (item.productImage && Array.isArray(item.productImage) && item.productImage.length > 0) {
                                        productImage = item.productImage[0];
                                    } else if (item.product && item.product.productImage && Array.isArray(item.product.productImage) && item.product.productImage.length > 0) {
                                        productImage = item.product.productImage[0];
                                    } else if (item.product && item.product.productImage) {
                                        productImage = item.product.productImage;
                                    } else if (item.productImage) {
                                        productImage = item.productImage;
                                    }
                                    
                                    // Get product name from multiple sources - comprehensive logic
                                    let productName = item.productName;
                                    if (item.product && item.product.product && item.product.product.name) {
                                        productName = item.product.product.name.trim();
                                    }
                                %>
                                <% if (productImage) { %>
                                    <img src="<%= productImage %>" 
                                         alt="<%= productName %>" 
                                         class="item-image"
                                         onerror="this.src='/images/background.jpg';">
                                <% } else { %>
                                    <div class="item-image"></div>
                                <% } %>
                                <div class="item-details">
                                    <h4 class="item-name"><%= item.productName %></h4>
                                    <div class="item-meta">
                                        <span>Quantity: <%= item.quantity %></span>
                                        <% if (item.size) { %>
                                            <span>Size: <%= item.size %></span>
                                        <% } %>
                                        <span>Price: â‚¹<%= item.price.toLocaleString('en-IN') %></span>
                                    </div>
                                </div>
                                <div class="item-price">â‚¹<%= (item.price * item.quantity).toLocaleString('en-IN') %></div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div style="text-align: center; padding: 40px; color: #999;">
                            <i class="fas fa-box-open" style="font-size: 48px; margin-bottom: 15px; opacity: 0.3;"></i>
                            <p>No items found in this order</p>
                        </div>
                    <% } %>
                    
                    <!-- Shipping Address Section -->
                    <% if (address) { %>
                        <div class="address-card">
                            <h3 class="section-title">Shipping Address</h3>
                            <div class="address-content">
                                <% if (address.name) { %>
                                    <div class="address-name"><%= address.name %> | <%= address.phone || 'No phone' %></div>
                                <% } %>
                                <p style="margin: 0;">
                                    <% if (address.addressLine1) { %>
                                        <%= address.addressLine1 %>
                                        <% if (address.addressLine2) { %>, <%= address.addressLine2 %><% } %>
                                        <% if (address.landMark || address.landmark) { %><br><%= address.landMark || address.landmark %><% } %>
                                        <br><%= address.city || 'No city' %>, <%= address.state || 'No state' %>, India - <%= address.pinCode || address.pincode || 'No pincode' %>
                                    <% } else if (address.address) { %>
                                        <%= address.address %>
                                        <br><%= address.city || 'No city' %>, <%= address.state || 'No state' %>, India - <%= address.pinCode || address.pincode || 'No pincode' %>
                                    <% } else if (address.fullAddress) { %>
                                        <%= address.fullAddress %>
                                    <% } else if (address.street) { %>
                                        <%= address.street %>
                                        <br><%= address.city || 'No city' %>, <%= address.state || 'No state' %>, India - <%= address.pinCode || address.pincode || 'No pincode' %>
                                    <% } else { %>
                                        <% if (address.landMark) { %>
                                            <%= address.landMark %><br>
                                        <% } %>
                                        <%= address.city || 'No city' %>, <%= address.state || 'No state' %>, India - <%= address.pinCode || address.pincode || 'No pincode' %>
                                        <% if (address.altPhone && address.altPhone !== address.phone) { %>
                                            <br><small>Alt Phone: <%= address.altPhone %></small>
                                        <% } %>
                                    <% } %>
                                </p>
                            </div>
                        </div>
                    <% } else { %>
                        <div class="address-card" style="opacity: 0.7;">
                            <h3 class="section-title">Shipping Address</h3>
                            <div class="address-content">
                                <p style="margin: 0; color: #666;">No shipping address available</p>
                            </div>
                        </div>
                    <% } %>
                    
                    <!-- Order Summary -->
                    <div class="order-summary">
                        <h3 class="section-title">Order Summary</h3>
                        
                        <div class="summary-row">
                            <span class="summary-label">Order ID:</span>
                            <span class="summary-value"><%= order.orderId %></span>
                        </div>
                        
                        <div class="summary-row">
                            <span class="summary-label">Order Date:</span>
                            <span class="summary-value"><%= new Date(order.createdAt).toLocaleDateString('en-US', { weekday: 'short', year: 'numeric', month: 'short', day: '2-digit' }) %>, <%= new Date(order.createdAt).toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit', hour12: false }) %></span>
                        </div>
                        
                        <div class="summary-row">
                            <span class="summary-label">Subtotal</span>
                            <span class="summary-value">â‚¹<%= ((order.finalAmount || 0) + (order.discount || 0) - (order.deliveryCharge || 0)).toLocaleString('en-IN') %></span>
                        </div>
                        
                        <% if (order.discount && order.discount > 0) { %>
                            <div class="summary-row">
                                <span class="summary-label">Discount</span>
                                <span class="summary-value" style="color: #28a745;">-â‚¹<%= order.discount.toLocaleString('en-IN') %></span>
                            </div>
                        <% } %>
                        
                        <% if (order.deliveryCharge && order.deliveryCharge > 0) { %>
                            <div class="summary-row">
                                <span class="summary-label">Delivery Charge</span>
                                <span class="summary-value">â‚¹<%= order.deliveryCharge.toLocaleString('en-IN') %></span>
                            </div>
                        <% } %>
                        
                        <div class="summary-row summary-total">
                            <span class="total-label">Total Amount</span>
                            <span class="total-value">â‚¹<%= (order.finalAmount || 0).toLocaleString('en-IN') %></span>
                        </div>
                        
                        <div class="summary-row">
                            <span class="summary-label">Payment Method:</span>
                            <span class="summary-value"><%= order.paymentMethod || 'Cash on Delivery' %></span>
                        </div>
                    </div>
                </div>
                
                <!-- Back Button -->
                <a href="/user/orders" class="btn-back">
                    <i class="fas fa-arrow-left"></i>
                    Back to Orders
                </a>
            <% } else { %>
                <div class="order-card" style="text-align: center; padding: 60px;">
                    <i class="fas fa-exclamation-triangle" style="font-size: 64px; color: #ddd; margin-bottom: 20px;"></i>
                    <h2 style="margin-bottom: 15px;">Order Not Found</h2>
                    <p style="color: #999; margin-bottom: 25px;">The order you're looking for doesn't exist or has been removed.</p>
                    <a href="/user/orders" class="btn-back">
                        <i class="fas fa-arrow-left"></i>
                        Back to Orders
                    </a>
                </div>
            <% } %>
        </main>
    </div>
    
